# define your env variables for the test env here
KERNEL_CLASS='App\Kernel'
APP_SECRET='$ecretf0rt3st'
SYMFONY_DEPRECATIONS_HELPER=999999
PANTHER_APP_ENV=panther
PANTHER_ERROR_SCREENSHOT_DIR=./var/error-screenshots

# Database configuration for tests
# Note: Doctrine adds '_test' suffix automatically in test env (see doctrine.yaml when@test)
# So DATABASE_NAME=larpilot becomes larpilot_test in the database
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=larpilot
DATABASE_USER=larpilot
DATABASE_PASSWORD=password
DATABASE_SERVER_VERSION=15

# Messenger & Mailer (test stubs)
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
MAILER_DSN=null://null

# OAuth (empty for tests - not needed for functional tests)
OAUTH_DISCORD_CLIENT_ID=test-discord-client-id
OAUTH_DISCORD_CLIENT_SECRET=test-discord-secret
OAUTH_FACEBOOK_CLIENT_ID=test-facebook-client-id
OAUTH_FACEBOOK_CLIENT_SECRET=test-facebook-secret
OAUTH_GOOGLE_CLIENT_ID=test-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=test-google-secret

# Google APIs (empty for tests)
GOOGLE_RECAPTCHA_SITE_KEY=test-recaptcha-site-key
GOOGLE_RECAPTCHA_SECRET=test-recaptcha-secret
GOOGLE_API_KEY=test-google-api-key
GOOGLE_MAPS_API_KEY=test-google-maps-api-key
GOOGLE_APP_ID=test-app-id
GOOGLE_SERVICE_EMAIL=test@example.com
GOOGLE_SERVICE_ACCOUNT_JSON=%kernel.project_dir%/google-service-account.json

# GitHub (not needed for tests)
GITHUB_TOKEN=test-github-token
GITHUB_REPO=tbuczen/LARPilot
GITHUB_DISCUSSION_CATEGORY_ID=test-category-id

# Test token for database suffix (empty for simple _test suffix)
TEST_TOKEN=
