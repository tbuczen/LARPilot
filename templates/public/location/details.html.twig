{% extends 'public/base.html.twig' %}

{% block title %}{{ location.title }} - {{ 'location.details'|trans }}{% endblock %}

{% block body %}
    {% set socialMediaActions %}
        {% if location.socialMediaLinks|length > 0 %}
            <div class="d-flex justify-content-lg-end gap-2 flex-wrap">
                {% for platform, url in location.socialMediaLinks %}
                    <a href="{{ url }}" target="_blank" rel="noopener noreferrer"
