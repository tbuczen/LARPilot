{% extends 'public/base.html.twig' %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                {# LARP Info Header #}
                {% embed 'public/larp/_info_header.html.twig' with {
                    'larp': larp,
                    'showManageButton': false
                } %}
                {% endembed %}

                {# Page Header #}
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">
                            <i class="bi bi-people me-2"></i>{{ 'public.characters.gallery'|trans }}
                        </h2>
                        <p class="mb-0 mt-2 small">{{ 'public.characters.gallery_description'|trans }}</p>
                    </div>
                </div>

                {# Filters #}
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        {{ form_start(filterForm, {'attr': {'class': 'row g-3'}}) }}
                            <div class="col-md-4">
                                {{ form_label(filterForm.search) }}
                                {{ form_widget(filterForm.search) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_label(filterForm.tags) }}
                                {{ form_widget(filterForm.tags) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_label(filterForm.gender) }}
                                {{ form_widget(filterForm.gender) }}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-funnel me-1"></i>{{ 'common.filter'|trans }}
                                </button>
                                <a href="{{ path('public_larp_characters_list', {slug: larp.slug}) }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>{{ 'common.clear'|trans }}
                                </a>
                            </div>
                        {{ form_end(filterForm) }}
                    </div>
                </div>

                {# Character Grid #}
                {% if characters is not empty %}
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        {% for character in characters %}
                            <div class="col">
                                <div class="card h-100 shadow-sm character-card" data-controller="character-gallery-card">
                                    {% if character.imageUrl %}
                                        <img src="{{ character.imageUrl }}" class="card-img-top" alt="{{ character.title }}" style="height: 200px; object-fit: cover;">
                                    {% else %}
                                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-person-circle text-white" style="font-size: 5rem;"></i>
                                        </div>
                                    {% endif %}

                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="{{ path('public_larp_characters_show', {
                                                slug: larp.slug,
                                                id: character.id
                                            }) }}" class="text-decoration-none">
                                                {{ character.title }}
                                            </a>
                                        </h5>

                                        {% if character.inGameName %}
                                            <p class="text-muted small mb-2">
                                                <em>{{ character.inGameName }}</em>
                                            </p>
                                        {% endif %}

                                        <p class="card-text small">
                                            {{ character.description|sanitize_html|striptags|slice(0, 150) }}...
                                        </p>

                                        {# Tags #}
                                        {% if character.tags|length > 0 %}
                                            <div class="mb-2">
                                                {% for tag in character.tags|slice(0, 3) %}
                                                    <span class="badge bg-info text-dark me-1">{{ tag.title }}</span>
                                                {% endfor %}
                                                {% if character.tags|length > 3 %}
                                                    <span class="badge bg-secondary">+{{ character.tags|length - 3 }}</span>
                                                {% endif %}
                                            </div>
                                        {% endif %}

                                        {# Character metadata #}
                                        <div class="d-flex justify-content-between align-items-center text-muted small">
                                            {% if character.gender %}
                                                <span><i class="bi bi-gender-ambiguous me-1"></i>{{ character.gender.label }}</span>
                                            {% endif %}
                                            {% if character.factions|length > 0 %}
                                                <span><i class="bi bi-shield me-1"></i>{{ character.factions|length }} {{ 'common.faction'|trans }}</span>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <div class="card-footer bg-transparent">
                                        <a href="{{ path('public_larp_characters_show', {
                                            slug: larp.slug,
                                            id: character.id
                                        }) }}" class="btn btn-outline-primary w-100">
                                            <i class="bi bi-eye me-1"></i>{{ 'common.view_details'|trans }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {# Back to LARP button #}
                    <div class="text-center mt-4">
                        <a href="{{ path('public_larp_details', {slug: larp.slug}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>{{ 'common.back_to_larp'|trans }}
                        </a>
                    </div>
                {% else %}
                    <div class="card shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <p class="mt-3 text-muted">{{ 'public.characters.no_characters'|trans }}</p>
                            <a href="{{ path('public_larp_details', {slug: larp.slug}) }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>{{ 'common.back_to_larp'|trans }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
