{% extends 'base.html.twig' %}

{% block title %}{{ 'staff_position.update_title'|trans }} - {{ map.name }}{% endblock %}

{% block body %}
    <div class="container-fluid py-3">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <div>
                                <h4 class="mb-0">{{ 'staff_position.update_title'|trans }}</h4>
                                <small class="text-muted">{{ map.name }} - {{ larp.title }}</small>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="{{ path('participant_staff_position_view', {
                                    larp: larp.id,
                                    map: map.id
                                }) }}" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i> {{ 'staff_position.view_positions'|trans }}
                                </a>
                                <a href="{{ path('participant_staff_position_index', { larp: larp.id }) }}"
                                   class="btn btn-secondary btn-sm">
                                    <i class="bi bi-arrow-left"></i> {{ 'back'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-2">
                        {% if currentPosition %}
                            <div class="alert alert-success mb-2">
                                <strong>{{ 'staff_position.current_position'|trans }}:</strong>
                                {{ currentPosition.gridCell }}
                                {% if currentPosition.statusNote %}
                                    - {{ currentPosition.statusNote }}
                                {% endif %}
                                <small class="text-muted d-block">
                                    {{ 'staff_position.updated_at'|trans }}:
                                    {{ currentPosition.positionUpdatedAt|date('H:i') }}
                                </small>
                            </div>
                        {% endif %}

                        <p class="text-muted mb-2">
                            <i class="bi bi-hand-index"></i>
                            {{ 'staff_position.tap_to_select'|trans }}
                        </p>

                        {% if map.imageFile %}
                            <div data-controller="staff-position-update"
                                 data-staff-position-update-image-url-value="{{ map.imagePath }}"
                                 data-staff-position-update-grid-rows-value="{{ map.gridRows }}"
                                 data-staff-position-update-grid-columns-value="{{ map.gridColumns }}"
                                 data-staff-position-update-grid-opacity-value="{{ map.gridOpacity }}"
                                 data-staff-position-update-current-cell-value="{{ currentPosition ? currentPosition.gridCell : '' }}">

                                <div id="mapContainer" style="height: 60vh; min-height: 300px; width: 100%; border: 1px solid #ddd; position: relative; overflow: hidden; touch-action: none;"></div>

                                <form method="post" class="mt-3" id="positionForm">
                                    <div class="row g-2">
                                        <div class="col-12 col-sm-4">
                                            <label for="gridCell" class="form-label">{{ 'staff_position.selected_cell'|trans }}</label>
                                            <input type="text" class="form-control form-control-lg text-center"
                                                   name="gridCell" id="gridCell" readonly
                                                   value="{{ currentPosition ? currentPosition.gridCell : '' }}"
                                                   placeholder="{{ 'staff_position.no_cell_selected'|trans }}"
                                                   data-staff-position-update-target="gridCellInput">
                                        </div>
                                        <div class="col-12 col-sm-8">
                                            <label for="statusNote" class="form-label">{{ 'staff_position.status_note'|trans }}</label>
                                            <input type="text" class="form-control"
                                                   name="statusNote" id="statusNote"
                                                   value="{{ currentPosition ? currentPosition.statusNote : '' }}"
                                                   placeholder="{{ 'staff_position.status_note_placeholder'|trans }}"
                                                   maxlength="255">
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2 mt-3">
                                        <button type="submit" class="btn btn-primary btn-lg flex-grow-1"
                                                data-staff-position-update-target="submitButton"
                                                disabled>
                                            <i class="bi bi-geo-alt-fill"></i>
                                            {{ 'staff_position.save_position'|trans }}
                                        </button>
                                        {% if currentPosition %}
                                            <button type="button" class="btn btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#removePositionModal">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </form>
                            </div>
                        {% else %}
                            <div class="alert alert-warning">
                                {{ 'larp.map.no_image'|trans }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if currentPosition %}
        <div class="modal fade" id="removePositionModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ 'staff_position.remove_position'|trans }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close'|trans }}"></button>
                    </div>
                    <div class="modal-body">
                        {{ 'staff_position.remove_confirm'|trans }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            {{ 'cancel'|trans }}
                        </button>
                        <form action="{{ path('participant_staff_position_remove', {
                            larp: larp.id,
                            map: map.id
                        }) }}" method="POST">
                            <button type="submit" class="btn btn-danger">
                                {{ 'staff_position.remove_position'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
