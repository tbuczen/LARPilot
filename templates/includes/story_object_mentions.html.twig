{# templates/includes/story_object_mentions.html.twig #}
{# Displays mentions - works in tab view (noCard=true) or as collapsible card #}

{% if storyObject is defined and storyObject.id and mentions is defined %}
<div class="tab-pane border border-top-0 rounded-bottom">
    {% if noCard is defined and noCard %}
        {# Simple table view for tab content #}
        {% if mentions is not empty %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>{{ 'story_object.mentions.source'|trans }}</th>
                        <th>{{ 'story_object.mentions.type'|trans }}</th>
                        <th>{{ 'story_object.mentions.context'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for mention in mentions %}
                        <tr>
                            <td>
                                {% set sourceType = mention.sourceObject.targetType.value|lower %}
                                {% set routeName = 'backoffice_larp_story_' ~ sourceType ~ '_modify' %}
                                <a href="{{ path(routeName, {
                                    larp: larp.id,
                                    (sourceType): mention.sourceObject.id
                                }) }}" class="text-decoration-none">
                                    <span class="badge bg-info me-2">{{ sourceType|trans }}</span>
                                    {{ mention.sourceObject.title }}
                                </a>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    {{ mention.mentionType|trans }}
                                </span>
                            </td>
                            <td class="text-muted">
                                {{ mention.context|trans }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                {{ 'story_object.mentions.empty'|trans }}
            </div>
        {% endif %}
    {% else %}
        {# Collapsible card view for non-tab layouts #}
        <div class="card mb-3 shadow-sm">

                    {% if mentions is not empty %}
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead class="table-light">
                                <tr>
                                    <th>{{ 'story_object.mentions.source'|trans }}</th>
                                    <th>{{ 'story_object.mentions.type'|trans }}</th>
                                    <th>{{ 'story_object.mentions.context'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for mention in mentions %}
                                    <tr>
                                        <td>
                                            {% set sourceType = mention.sourceObject.targetType.value|lower %}
                                            {% set routeName = 'backoffice_larp_story_' ~ sourceType ~ '_modify' %}
                                            <a href="{{ path(routeName, {
                                                larp: larp.id,
                                                (sourceType): mention.sourceObject.id
                                            }) }}" class="text-decoration-none">
                                                <span class="badge bg-info me-2">{{ sourceType|trans }}</span>
                                                {{ mention.sourceObject.title }}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                {{ mention.mentionType|trans }}
                                            </span>
                                        </td>
                                        <td class="text-muted">
                                            {{ mention.context }}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted text-center mb-0">{{ 'story_object.mentions.empty'|trans }}</p>
                    {% endif %}
        </div>
    {% endif %}
</div>
{% endif %}
