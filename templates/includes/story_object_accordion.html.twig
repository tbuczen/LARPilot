{# templates/includes/story_object_accordion.html.twig #}

{#
    Renders a collapsible accordion for displaying related story objects

    Parameters:
    - id: String - Unique ID for the collapse element
    - title: String - Title translation key for the accordion header
    - items: Array - Collection of story objects to display
    - larp: Larp - The LARP entity
    - character: Character|null - Optional character for "Add" button pre-filling
    - viewRoute: String - Route name for viewing an item (e.g., 'backoffice_larp_story_quest_modify')
    - listRoute: String - Route name for "View All" button (e.g., 'backoffice_larp_story_quest_list')
    - addRoute: String|null - Optional route name for "Add" button (e.g., 'backoffice_larp_story_quest_modify')
    - addButtonLabel: String|null - Optional translation key for "Add" button
    - itemParamName: String - Parameter name for the item in routes (e.g., 'quest', 'thread')
    - isExpanded: Boolean - Whether the accordion should be expanded by default (default: false)
#}

{% macro accordion(id, title, items, larp, character, viewRoute, listRoute, addRoute, addButtonLabel, itemParamName, isExpanded) %}
    {% set isExpanded = isExpanded|default(false) %}
    <div class="card mb-3 shadow-sm">
        <div
                class="card-header d-flex justify-content-between align-items-center"
                data-bs-toggle="collapse"
                data-bs-target="#{{ id }}"
                role="button"
                aria-expanded="{{ isExpanded ? 'true' : 'false' }}"
                aria-controls="{{ id }}"
        >
            <span class="fw-bold">
                {{ title|trans }}
            </span>
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="20" height="20"
                 class="bi bi-chevron-down transition toggleIcon"
                 viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                      d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
            </svg>
        </div>

        <div id="{{ id }}" class="collapse{{ isExpanded ? ' show' : '' }}">
            <div class="card-body">
                {% if items|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>{{ 'name'|trans }}</th>
                                    <th>{{ 'description'|trans }}</th>
                                    <th>{{ 'actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>
                                            <a href="{{ path(viewRoute, {
                                                'larp': larp.id,
                                                (itemParamName): item.id
                                            }) }}" class="text-decoration-none">
                                                {{ item.title }}
                                            </a>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 300px;">
                                                {{ item.description|default('â€”') }}
                                            </div>
                                        </td>
                                        <td>
                                            <a href="{{ path(viewRoute, {
                                                'larp': larp.id,
                                                (itemParamName): item.id
                                            }) }}" class="btn btn-sm btn-outline-primary">
                                                {{ 'edit'|trans }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="text-muted">
                        {{ 'empty_list'|trans }}
                    </div>
                {% endif %}

                <div class="mt-3 d-flex gap-2">
                    <a href="{{ path(listRoute, {'larp': larp.id}) }}" class="btn btn-outline-secondary">
                        {{ 'view_all'|trans }}
                    </a>
                    {% if addRoute and addButtonLabel and character and character.id %}
                        <a href="{{ path(addRoute, {'larp': larp.id, 'character': character.id}) }}"
                           class="btn btn-success"
                           target="_blank">
                            <i class="bi bi-plus-circle"></i> {{ addButtonLabel|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endmacro %}
