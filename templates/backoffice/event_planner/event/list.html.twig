{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'event_planner.event.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_event_planner_event_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('event_planner.event.list', actions) }}
        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if events is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                {% include 'includes/sort_th.html.twig' with {
                                    field: 'title',
                                    label: 'title'|trans
                                } %}
                                {% include 'includes/sort_th.html.twig' with {
                                    field: 'startTime',
                                    label: 'event_planner.event.start_time'|trans
                                } %}
                                <th>{{ 'event_planner.event.duration'|trans }}</th>
                                <th>{{ 'event_planner.event.location'|trans }}</th>
                                <th>{{ 'status'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for event in events %}
                                <tr {% if event.hasUnresolvedConflicts %}class="table-warning"{% endif %}>
                                    <td>
                                        <a href="{{ path('backoffice_event_planner_event_view', {
                                            larp: larp.id, event: event.id
                                        }) }}">
                                            <strong>{{ event.title }}</strong>
                                        </a>
                                        {% if event.hasUnresolvedConflicts %}
                                            <span class="badge bg-danger ms-2">
                                                <i class="bi bi-exclamation-triangle"></i> {{ 'event_planner.event.has_conflicts'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>{{ event.startTime|date('Y-m-d H:i') }}</td>
                                    <td>{{ event.durationMinutes }} {{ 'minutes'|trans }}</td>
                                    <td>{{ event.location ? event.location.name : '-' }}</td>
                                    <td>
                                        <span class="badge {{ event.status.badgeClass }}">
                                            {{ event.status.label }}
                                        </span>
                                    </td>
                                    <td>
                                        {{ ui.edit_button(path('backoffice_event_planner_event_modify', {
                                            larp: larp.id, event: event.id
                                        })) }}
                                        {{ ui.delete_button(event.id, event.title, path('backoffice_event_planner_event_delete', {
                                            larp: larp.id, event: event.id
                                        })) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% include 'includes/pagination.html.twig' with { pagination: events } %}
            {% else %}
                {{ ui.empty_state('event_planner.event.empty_list', 'bi-calendar-event') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
