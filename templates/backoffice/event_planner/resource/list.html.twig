{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'event_planner.resource.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_event_planner_resource_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('event_planner.resource.list', actions) }}
        <div class="card-body p-0">
            {# Filter form #}
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if resources is not empty %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                {% include 'includes/sort_th.html.twig' with {
                                    field: 'name',
                                    label: 'name'|trans
                                } %}
                                {% include 'includes/sort_th.html.twig' with {
                                    field: 'type',
                                    label: 'event_planner.resource.type'|trans
                                } %}
                                <th>{{ 'event_planner.resource.quantity'|trans }}</th>
                                <th>{{ 'event_planner.resource.shareable'|trans }}</th>
                                <th>{{ 'event_planner.resource.availability'|trans }}</th>
                                <th>{{ 'actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for resource in resources %}
                                <tr>
                                    <td>
                                        <a href="{{ path('backoffice_event_planner_resource_modify', {
                                            larp: larp.id, resource: resource.id
                                        }) }}">
                                            <strong>{{ resource.name }}</strong>
                                        </a>
                                        {% if resource.linkedEntityTitle %}
                                            <br><small class="text-muted">{{ resource.linkedEntityTitle }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <i class="{{ resource.type.icon }}"></i> {{ resource.type.label }}
                                    </td>
                                    <td>{{ resource.quantity }}</td>
                                    <td>
                                        {% if resource.shareable %}
                                            <span class="badge bg-success">{{ 'yes'|trans }}</span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ 'no'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if resource.availableFrom or resource.availableUntil %}
                                            <small>
                                                {% if resource.availableFrom %}
                                                    {{ 'event_planner.resource.from'|trans }}: {{ resource.availableFrom|date('Y-m-d H:i') }}<br>
                                                {% endif %}
                                                {% if resource.availableUntil %}
                                                    {{ 'event_planner.resource.until'|trans }}: {{ resource.availableUntil|date('Y-m-d H:i') }}
                                                {% endif %}
                                            </small>
                                        {% else %}
                                            <span class="text-muted">{{ 'event_planner.resource.always_available'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ ui.delete_button(resource.id, resource.name, path('backoffice_event_planner_resource_delete', {
                                            larp: larp.id, resource: resource.id
                                        })) }}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% include 'includes/pagination.html.twig' with { pagination: resources } %}
            {% else %}
                {{ ui.empty_state('event_planner.resource.empty_list', 'bi-box-seam') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
