{% extends 'backoffice/larp/base.html.twig' %}

{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}
    {% if isNew %}
        {{ 'event_planner.resource.create'|trans }} - {{ larp.title }}
    {% else %}
        {{ 'event_planner.resource.modify'|trans }} - {{ resource.name }} - {{ larp.title }}
    {% endif %}
{% endblock %}

{% block larp_content %}
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card mt-4">
                <div class="card-header">
                    <h2 class="mb-0">
                        {% if isNew %}
                            {{ 'event_planner.resource.create'|trans }}
                        {% else %}
                            {{ 'event_planner.resource.edit'|trans }}
                        {% endif %}
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-8">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.type) }}
                            </div>
                        </div>

                        {{ form_row(form.description) }}

                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.quantity) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.shareable) }}
                            </div>
                        </div>

                        <hr>
                        <h5>{{ 'event_planner.resource.availability_window'|trans }}</h5>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.availableFrom) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.availableUntil) }}
                            </div>
                        </div>

                        <hr>
                        <h5>{{ 'event_planner.resource.linked_entities'|trans }}</h5>
                        <p class="text-muted small">{{ 'event_planner.resource.linked_entities_help'|trans }}</p>
                        {{ form_row(form.item) }}
                        {{ form_row(form.participant) }}

                        {{ ui.form_actions(
                            resource is defined and resource.id ? 'save' : 'create',
                            'bi-check-circle',
                            path('backoffice_event_planner_resource_list', { larp: larp.id })
                        ) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
