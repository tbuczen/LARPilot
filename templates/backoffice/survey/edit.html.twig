{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'survey.edit'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">{{ 'survey.builder'|trans }}</h2>
                <div class="d-flex gap-2">
                    <a href="{{ path('backoffice_larp_survey_preview', { larp: larp.id }) }}"
                       class="btn btn-outline-info"
                       target="_blank">
                        <i class="bi bi-eye me-1"></i>{{ 'survey.preview'|trans }}
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            {{ form_start(form, {'attr': {'data-controller': 'survey-builder'}}) }}

                {# Survey metadata #}
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="mb-3">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                {{ form_widget(form.isActive) }}
                                {{ form_label(form.isActive) }}
                                {{ form_errors(form.isActive) }}
                                {% if form.isActive.vars.help is defined %}
                                    <div class="form-text">{{ form.isActive.vars.help|trans }}</div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                {# Questions section #}
                <div class="mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>{{ 'survey.questions'|trans }}</h4>
                        <button type="button"
                                class="btn btn-success"
                                data-action="click->survey-builder#addQuestion">
                            <i class="bi bi-plus-circle me-1"></i>{{ 'survey.add_question'|trans }}
                        </button>
                    </div>

                    <div id="survey-questions-container"
                         data-survey-builder-target="questionsContainer"
                         data-prototype="{{ form_widget(form.questions.vars.prototype)|e('html_attr') }}"
                         data-index="{{ form.questions|length }}">

                        {% for question in form.questions %}
                            <div class="card mb-3 question-item" data-question-index="{{ loop.index0 }}">
                                <div class="card-header ">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-grip-vertical drag-handle me-2" style="cursor: grab;"></i>
                                            <span class="badge bg-secondary me-2">{{ loop.index }}</span>
                                            <strong>{{ 'survey.question'|trans }} {{ loop.index }}</strong>
                                        </div>
                                        <button type="button"
                                                class="btn btn-sm btn-danger"
                                                data-action="click->survey-builder#removeQuestion">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8 mb-3">
                                            {{ form_label(question.questionText) }}
                                            {{ form_widget(question.questionText) }}
                                            {{ form_errors(question.questionText) }}
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            {{ form_label(question.questionType) }}
                                            {{ form_widget(question.questionType) }}
                                            {{ form_errors(question.questionType) }}
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-8 mb-3">
                                            {{ form_label(question.helpText) }}
                                            {{ form_widget(question.helpText) }}
                                            {{ form_errors(question.helpText) }}
                                        </div>

                                        <div class="col-md-4 mb-3">
                                            <div class="form-check mt-4">
                                                {{ form_widget(question.isRequired) }}
                                                {{ form_label(question.isRequired) }}
                                                {{ form_errors(question.isRequired) }}
                                            </div>
                                        </div>
                                    </div>

                                    {# Options section for choice-based questions #}
                                    <div class="question-options-section"
                                         data-survey-builder-target="optionsContainer"
                                         data-question-type="{{ question.questionType.vars.value }}">

                                        {% if question.questionType.vars.value in ['single_choice', 'multiple_choice'] %}
                                            <div class="mt-3">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <label class="form-label">{{ 'survey.options'|trans }}</label>
                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-primary"
                                                            data-action="click->survey-builder#addOption"
                                                            data-question-index="{{ loop.index0 }}">
                                                        <i class="bi bi-plus"></i> {{ 'survey.add_option'|trans }}
                                                    </button>
                                                </div>

                                                <div class="options-list">
                                                    {% for option in question.options %}
                                                        <div class="input-group mb-2">
                                                            <span class="input-group-text">{{ loop.index }}</span>
                                                            {{ form_widget(option.optionText) }}
                                                            {{ form_widget(option.orderPosition, {'attr': {'class': 'd-none'}}) }}
                                                            <button type="button"
                                                                    class="btn btn-outline-danger"
                                                                    data-action="click->survey-builder#removeOption">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                        {{ form_errors(option.optionText) }}
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        {% endif %}
                                    </div>

                                    {{ form_widget(question.orderPosition, {'attr': {'class': 'd-none'}}) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    {{ form_errors(form.questions) }}
                </div>

                {# Form actions #}
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('backoffice_larp_dashboard', { larp: larp.id }) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>{{ 'common.back'|trans }}
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-1"></i>{{ 'common.save'|trans }}
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# Help card #}
    <div class="card mt-4 border-info">
        <div class="card-body bg-info bg-opacity-10">
            <h5 class="card-title"><i class="bi bi-info-circle me-2"></i>{{ 'survey.help.title'|trans }}</h5>
            <ul class="mb-0">
                <li>{{ 'survey.help.drag_reorder'|trans }}</li>
                <li>{{ 'survey.help.question_types'|trans }}</li>
                <li>{{ 'survey.help.tag_selection'|trans }}</li>
                <li>{{ 'survey.help.preview'|trans }}</li>
            </ul>
        </div>
    </div>
{% endblock %}
