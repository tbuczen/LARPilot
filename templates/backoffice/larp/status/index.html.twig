{% extends 'backoffice/larp/base.html.twig' %}

{% block title %}{{ 'larp.status.management'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'larp.status.current'|trans }}</h5>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <span class="badge badge-{{ currentStatus.value == 'DRAFT' ? 'secondary' : (currentStatus.value == 'CONFIRMED' ? 'success' : 'primary') }} fs-5 me-3">
                        {{ currentStatus.value }}
                    </span>
                    <div>
                        <h6 class="mb-0">{{ ('larp.status.' ~ currentStatus.value|lower)|trans }}</h6>
                        <small class="text-muted">{{ ('larp.status.' ~ currentStatus.value|lower ~ '.description')|trans }}</small>
                    </div>
                </div>

                {% if availableTransitions|length > 0 %}
                <div class="mt-4">
                    <h6>{{ 'larp.status.available_transitions'|trans }}</h6>
                    <div class="d-flex flex-wrap gap-2">
                        {% for transition in availableTransitions %}
                        {% if transition.canExecute %}
                        <form method="post" action="{{ path('backoffice_larp_status_transition', {larp: larp.id, transitionName: transition.name}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('larp_transition_' ~ larp.id) }}">
                            <button type="submit" 
                                    class="btn btn-sm btn-outline-primary"
                                    onclick="return confirm('{{ 'larp.status.confirm_transition'|trans({'%transition%': transition.label}) }}')">
                                {{ transition.label }}
                                {% if transition.to %}
                                    <i class="fas fa-arrow-right"></i>
                                    <span class="badge badge-light">{{ transition.to }}</span>
                                {% endif %}
                            </button>
                        </form>
                        {% else %}
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary" disabled>
                                {{ transition.label }}
                                {% if transition.to %}
                                    <i class="fas fa-arrow-right"></i>
                                    <span class="badge badge-light">{{ transition.to }}</span>
                                {% endif %}
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><h6 class="dropdown-header">Requirements:</h6></li>
                                {% for error in transition.validationErrors %}
                                <li><span class="dropdown-item-text text-danger"><i class="fas fa-exclamation-circle"></i> {{ error }}</span></li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% else %}
                <div class="alert alert-info">
                    {{ 'larp.status.no_transitions'|trans }}
                </div>
                {% endif %}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">{{ 'larp.properties'|trans }}</h5>
            </div>
            <div class="card-body">
                {{ form_start(propertiesForm, {'action': path('backoffice_larp_status_update_properties', {'larp': larp.id})}) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.startDate) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.endDate) }}
                    </div>
                </div>

                {{ form_row(propertiesForm.location) }}

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.maxCharacterChoices) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.setting) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.type) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(propertiesForm.characterSystem) }}
                    </div>
                </div>

                {{ form_row(propertiesForm.description) }}

                {{ form_row(propertiesForm.submit) }}

                {{ form_end(propertiesForm) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">{{ 'larp.status.workflow'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="workflow-diagram">
                    {% for status in allStatuses %}
                    <div class="workflow-step {{ status == currentStatus ? 'active' : '' }}">
                        <span class="badge badge-{{ status.value == currentStatus.value ? 'primary' : 'light' }}">
                            {{ status.value }}
                        </span>
                        <small class="d-block mt-1">{{ ('larp.status.' ~ status.value|lower)|trans }}</small>
                    </div>
                    {% if not loop.last %}
                    <div class="workflow-arrow">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">{{ 'larp.status.visibility'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>{{ 'larp.status.visible_everyone'|trans }}:</strong>
                    <span class="badge badge-{{ currentStatus.isVisibleForEveryone() ? 'success' : 'secondary' }}">
                        {{ currentStatus.isVisibleForEveryone() ? 'yes'|trans : 'no'|trans }}
                    </span>
                </div>
                <div>
                    <strong>{{ 'larp.status.visible_organizers'|trans }}:</strong>
                    <span class="badge badge-{{ currentStatus.isVisibleForOrganizers() ? 'success' : 'secondary' }}">
                        {{ currentStatus.isVisibleForOrganizers() ? 'yes'|trans : 'no'|trans }}
                    </span>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">{{ 'larp.status.requirements'|trans }}</h6>
            </div>
            <div class="card-body">
                <div class="accordion" id="requirementsAccordion">
                    {# To Publish Requirements #}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button {{ currentStatus.value in ['DRAFT', 'WIP'] ? '' : 'collapsed' }}"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#publishRequirements">
                                <i class="fas fa-upload me-2"></i> Publish Requirements
                            </button>
                        </h2>
                        <div id="publishRequirements"
                             class="accordion-collapse collapse {{ currentStatus.value in ['DRAFT', 'WIP'] ? 'show' : '' }}"
                             data-bs-parent="#requirementsAccordion">
                            <div class="accordion-body">
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas {{ larp.location ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        Location
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas {{ larp.description ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        Description
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas {{ larp.startDate ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        Start Date
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas {{ larp.endDate ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        End Date
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {# Open for Inquiries Requirements #}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#inquiriesRequirements">
                                <i class="fas fa-users me-2"></i> Open for Inquiries Requirements
                            </button>
                        </h2>
                        <div id="inquiriesRequirements"
                             class="accordion-collapse collapse"
                             data-bs-parent="#requirementsAccordion">
                            <div class="accordion-body">
                                <p class="text-muted small mb-2">All publish requirements plus:</p>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="fas {{ larp.characters|length > 0 ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        At least one character
                                        {% if larp.characters|length > 0 %}
                                            <span class="badge bg-secondary ms-1">{{ larp.characters|length }}</span>
                                        {% endif %}
                                    </li>
                                    <li class="mb-2">
                                        {% set charactersWithoutDesc = larp.characters|filter(c => not c.description) %}
                                        <i class="fas {{ charactersWithoutDesc|length == 0 and larp.characters|length > 0 ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        All characters have descriptions
                                        {% if charactersWithoutDesc|length > 0 %}
                                            <span class="badge bg-warning ms-1">{{ charactersWithoutDesc|length }} missing</span>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    {# Confirm Event Requirements #}
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#confirmRequirements">
                                <i class="fas fa-check-double me-2"></i> Confirm Event Requirements
                            </button>
                        </h2>
                        <div id="confirmRequirements"
                             class="accordion-collapse collapse"
                             data-bs-parent="#requirementsAccordion">
                            <div class="accordion-body">
                                <p class="text-muted small mb-2">All inquiry requirements plus:</p>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        {% set unassignedChars = larp.characters|filter(c => c.larpParticipant is null) %}
                                        <i class="fas {{ unassignedChars|length == 0 and larp.characters|length > 0 ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' }}"></i>
                                        All characters assigned to participants
                                        {% if unassignedChars|length > 0 %}
                                            <span class="badge bg-warning ms-1">{{ unassignedChars|length }} unassigned</span>
                                        {% endif %}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.workflow-diagram {
    text-align: center;
}

.workflow-step {
    margin: 10px 0;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.workflow-step.active {
    background-color: #e3f2fd;
    border: 2px solid #2196f3;
}

.workflow-arrow {
    color: #666;
    margin: 5px 0;
}

.btn-group .dropdown-menu {
    min-width: 300px;
}
</style>
{% endblock %}