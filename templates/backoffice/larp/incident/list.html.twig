{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'incidents'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {{ ui.card_header('incidents') }}

        <div class="card-body p-0">
            {% if filterForm is defined %}
                {% include 'includes/filter_form.html.twig' with { form: filterForm } %}
            {% endif %}

            {% if incidents is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>{{ 'name'|trans }}</th>
                        <th>{{ 'status'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for incident in incidents %}
                        <tr>
                            <td>
                                <a href="{{ path('backoffice_larp_incident_view', {larp: larp.id, incident: incident.id}) }}">
                                    {{ incident.caseId }}
                                </a>
                            </td>
                            <td>
                                <span class="badge bg-secondary">
                                    {{ incident.status.value }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('backoffice_larp_incident_view', {larp: larp.id, incident: incident.id}) }}"
                                   class="btn btn-sm btn-primary">
                                    {{ 'show_details'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-shield-exclamation') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
