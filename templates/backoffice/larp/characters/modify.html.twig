{# templates/backoffice/larp/characters/modify.html.twig #}
{% extends 'backoffice/larp/base.html.twig' %}

{% import 'includes/story_object_accordion.html.twig' as accordion_macro %}
{% import 'includes/story_object_tabs.html.twig' as tabs_macro %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_content %}
    {# Header showing story object type and title (only for existing objects) #}
    {% if character.id %}
        {% include 'includes/story_object_header.html.twig' with {
            storyObject: character,
            storyObjectType: 'character',
            mentionsCount: mentions|length
        } %}
    {% endif %}

    {% set detailsContent %}
        <div class="tab-pane border border-top-0 p-3">
        {{ form_start(form) }}
            {{ form_widget(form) }}

            {# Form actions with consistent styling #}
            {{ ui.form_actions(
                character.id ? 'save' : 'create',
                'bi-check-circle',
                path('backoffice_larp_story_character_list', { larp: larp.id })
            ) }}
            {{ form_end(form) }}
        </div>

        {% if not isNewCharacter %}
            <div class="card mb-3 shadow-sm mt-4">
                <div class="card-body">
                    {% if canExportSheet %}
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">{{ 'larp.character.export.title'|trans }}</h5>
                                <p class="text-muted mb-0">{{ 'larp.character.export.description'|trans }}</p>
                            </div>
                            <form method="post" action="{{ path('backoffice_larp_character_export_sheet', {larp: larp.id, character: character.id}) }}">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-file-earmark-arrow-down me-2"></i>
                                    {{ 'larp.character.export.button'|trans }}
                                </button>
                            </form>
                        </div>
                    {% else %}
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">{{ 'larp.character.export.title'|trans }}</h5>
                                <p class="text-muted mb-2">{{ 'larp.character.export.not_configured'|trans }}</p>
                                <a href="{{ path('backoffice_larp_integration_settings', {larp: larp.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-gear"></i>
                                    {{ 'larp.character.export.configure'|trans }}
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% if character.id %}
            <div class="card mb-3 shadow-sm mt-4">
                <div
                        class="card-header d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse"
                        data-bs-target="#relationsCollapse"
                        role="button"
                        aria-expanded="true"
                        aria-controls="relationsCollapse"
                >
                <span class="fw-bold">
                    {{ 'larp.relation.list'|trans }}
                </span>
                    <i class="bi bi-chevron-down transition toggleIcon"></i>
                </div>

                <div id="relationsCollapse" class="collapse">
                    <div class="card-body">
                        {{ component('StoryObjectRelationListForm', {
                            storyObject: character,
                        }) }}
                    </div>
                </div>
            </div>

            {# Quests #}
            {{ accordion_macro.accordion(
                'questsCollapse',
                'larp.quest.list',
                character.quests,
                larp,
                character,
                'backoffice_larp_story_quest_modify',
                'backoffice_larp_story_quest_list',
                'backoffice_larp_story_quest_modify',
                'larp.quest.add',
                'quest',
                false
            ) }}

            {# Threads #}
            {{ accordion_macro.accordion(
                'threadsCollapse',
                'larp.thread.list',
                character.threads,
                larp,
                character,
                'backoffice_larp_story_thread_modify',
                'backoffice_larp_story_thread_list',
                'backoffice_larp_story_thread_modify',
                'larp.thread.add',
                'thread',
                false
            ) }}

            {# References #}
            <div class="card mb-3 shadow-sm">
                <div
                        class="card-header d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse"
                        data-bs-target="#referencesCollapse"
                        role="button"
                        aria-expanded="true"
                        aria-controls="referencesCollapse"
                >
                <span class="fw-bold">
                    {{ 'larp.reference.list'|trans }}
                </span>
                    <i class="bi bi-chevron-down transition toggleIcon"></i>
                </div>

                <div id="referencesCollapse" class="collapse">
                    <div class="card-body">
                        {{ component('StoryObjectReferencesListForm', {
                            storyObject: character,
                        }) }}
                    </div>
                </div>
            </div>

            {# Comments & Discussions - POC #}
            <div class="card mb-3 shadow-sm">
                <div
                        class="card-header d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse"
                        data-bs-target="#commentsCollapse"
                        role="button"
                        aria-expanded="false"
                        aria-controls="commentsCollapse"
                >
                <span class="fw-bold">
                    <i class="bi bi-chat-dots"></i> {{ 'comment.discussions'|trans }}
                </span>
                    <div class="d-flex align-items-center">
                        <a href="{{ path('backoffice_larp_story_comment_list', {
                            larp: larp.id,
                            storyObject: character.id
                        }) }}" class="btn btn-sm btn-outline-primary me-2" onclick="event.stopPropagation();">
                            {{ 'comment.view_all'|trans }}
                        </a>
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="20" height="20"
                             class="bi bi-chevron-down transition toggleIcon"
                             viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </div>
                </div>

                <div id="commentsCollapse" class="collapse">
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>POC Feature:</strong> Comments and discussions for story objects.
                            Click "{{ 'comment.view_all'|trans }}" to manage discussions for this character.
                        </div>
                        <div class="text-center">
                            <a href="{{ path('backoffice_larp_story_comment_create', {
                                larp: larp.id,
                                storyObject: character.id
                            }) }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> {{ 'comment.add_new'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            {# Version History #}
            <div class="card mb-3 shadow-sm">
                <div
                        class="card-header d-flex justify-content-between align-items-center"
                        data-bs-toggle="collapse"
                        data-bs-target="#versionHistoryCollapse"
                        role="button"
                        aria-expanded="false"
                        aria-controls="versionHistoryCollapse"
                >
                <span class="fw-bold">
                    {{ 'larp.version_history'|trans }}
                </span>
                    <i class="bi bi-chevron-down transition toggleIcon"></i>
                </div>

                <div id="versionHistoryCollapse" class="collapse">
                    <div class="card-body">
                        {{ component('StoryObjectVersionHistory', {
                            storyObject: character,
                            showChangelogLinks: true
                        }) }}
                    </div>
                </div>
            </div>
        {% endif %}
    {% endset %}

    {% if character.id %}
        {# Tabs navigation #}
        {{ tabs_macro.tabs('details', character, 'character', larp, mentions|length, false, applicantsCount|default(0)) }}

        {{ detailsContent|raw }}
    {% else %}
        {{ detailsContent|raw }}
    {% endif %}

{% endblock %}

{% block title %}{{ larp.title }} - {{ character.getTitle() ?? 'new'|trans }}{% endblock %}
