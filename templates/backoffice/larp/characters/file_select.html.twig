{% extends 'backoffice/base.html.twig' %}
{% import 'backoffice/larp/_menu.html.twig' as larpMenu %}

{% block title %}{{ 'integrations.file_select.title'|trans }}{% endblock %}

{% block body %}
    <header>
        {{ larpMenu.larpBackofficeMenu(larp) }}
    </header>
    <main>
        <div class="container mt-4">
            <h1>{{ 'integrations.file_select.heading'|trans }}</h1>

            {% if files is not empty %}
                <div class="list-group">
                    {% for file in files %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ file.fileName }}</strong>
                                    <div class="text-muted small">{{ file.mimeType }}</div>
                                    <div class="text-muted small">ID: {{ file.fileId }}</div>
                                </div>
                                <div class="btn-group">
                                    <a href="{{ path('backoffice_larp_integration_file_mapping', {
                                        id: larp.id,
                                        sharedFile: file.id,
                                        provider: file.integration.provider.value
                                    }) }}" class="btn btn-primary btn-sm">
                                        {{ 'integrations.file_select.configure_mapping'|trans }}
                                    </a>
                                    <a href="{{ path('backoffice_larp_integration_file_open', {
                                        id: larp.id,
                                        provider: file.integration.provider.value,
                                        externalFileId: file.fileId
                                    }) }}" target="_blank" class="btn btn-outline-secondary btn-sm">
                                        {{ 'common.open'|trans }}
                                    </a>
                                </div>
                            </div>

