{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.character.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <!-- Import Options Modal -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">{{ 'larp.import_options'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ 'close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    {% if integrations is defined and integrations|length > 0 %}
                        {% for integration in integrations %}
                            <!-- Option for Google Spreadsheet import -->
                            <a href="{{ path('backoffice_larp_story_character_import_integration', {'larp': larp.id, 'provider': integration.provider.value }) }}"
                               class="btn btn-primary">
                                {{ 'larp.import_google'|trans }}
                            </a>
                        {% endfor %}
                    {% endif %}
                    <a href="{{ path('backoffice_larp_story_character_import_file', {'larp': larp.id}) }}"
                       class="btn btn-secondary">
                        {{ 'larp.import_file'|trans }}
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light"
                            data-bs-dismiss="modal">{{ 'close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        {% set actions %}
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#importModal">
                {{ 'larp.import_characters'|trans }}
            </button>
            {{ ui.primary_button('create', path('backoffice_larp_story_character_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.character.list', actions) }}

        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if characters is not empty %}
            <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                <tr>
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'title',
                        label: 'name'|trans
                    } %}

                    {% include 'includes/sort_th.html.twig' with {
                        field: 'gender',
                        label: 'gender'|trans
                    } %}

                    <th>{{ 'description'|trans }}</th>

                    {% include 'includes/sort_th.html.twig' with {
                        field: 'factions.title',
                        label: 'larp.faction.name'|trans
                    } %}

                    <th>{{ 'actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for character in characters %}
                    <tr>
                        <td>
                            <a href="{{ path('backoffice_larp_story_character_modify', { larp: larp.id, character: character.id }) }}">
                                {{ character.title }}
                            </a>
                        </td>
                        <td>{{ character.gender ? character.gender.value : ''}}</td>
                        <td>{{ character.description|truncate_words(7) }}</td>
                        <td>{{ character.factions|map(f => f.title)|join(', ')|default('-') }}</td>
                        <td>


                            {{ ui.delete_button(character.id, character.title, path('backoffice_larp_story_character_delete', { larp: larp.id, character: character.id, integrations: 'false' })) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            {% include 'includes/pagination.html.twig' with { pagination: characters } %}
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-person') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
