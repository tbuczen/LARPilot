{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block title %}{{ 'larp.faction.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">{{ 'larp.import_options'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ 'close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    <a href="{{ path('backoffice_larp_story_faction_import_file', {'larp': larp.id}) }}"
                       class="btn btn-secondary">
                        {{ 'larp.import_file'|trans }}
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light"
                            data-bs-dismiss="modal">{{ 'close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_larp_story_faction_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.faction.list', actions) }}
        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if factions is not empty %}
            <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                <tr>
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'title',
                        label: 'name'|trans
                    } %}
                    <th>{{ 'description'|trans }}</th>
                    <th>{{ 'actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for faction in factions %}
                    <tr>
                        <td>
                            <a href="{{ path('backoffice_larp_story_faction_modify', { larp: larp.id, faction: faction.id }) }}">
                                {{ faction.title }}
                            </a>
                           </td>
                        <td>{{ faction.description|truncate_words(7) }}</td>
                        <td>
                            {{ ui.delete_button(faction.id, faction.title, path('backoffice_larp_story_faction_delete', { larp: larp.id, faction: faction.id })) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-people') }}
            {% endif %}
        </div>
    </div>

    {# Unified delete modal with Stimulus controller #}
    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
