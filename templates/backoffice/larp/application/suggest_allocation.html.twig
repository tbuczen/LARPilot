{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.applications.suggest_allocation'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">{{ 'larp.applications.suggested_allocations'|trans }}</h5>
                    <a href="{{ path('backoffice_larp_applications_list', {larp: larp.id}) }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> {{ 'back'|trans }}
                    </a>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        {{ 'larp.applications.allocation_explanation'|trans }}
                    </p>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        {{ 'larp.applications.allocation_algorithm_info'|trans }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if suggestions is not empty %}
        <form method="post" action="{{ path('backoffice_larp_applications_accept_allocation', {larp: larp.id}) }}" id="allocationForm">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title mb-0">{{ 'larp.applications.proposed_matches'|trans }} ({{ suggestions|length }})</h6>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 50px;">
                                                <input type="checkbox" id="selectAll" class="form-check-input">
                                            </th>
                                            <th>{{ 'larp.applications.character'|trans }}</th>
                                            <th>{{ 'larp.applications.applicant'|trans }}</th>
                                            <th>{{ 'larp.applications.priority'|trans }}</th>
                                            <th>{{ 'larp.applications.vote_score'|trans }}</th>
                                            <th>{{ 'larp.applications.total_score'|trans }}</th>
                                            <th>{{ 'larp.applications.justification'|trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for suggestion in suggestions %}
                                            <tr>
                                                <td>
                                                    <input type="checkbox"
                                                           name="allocations[{{ loop.index0 }}][selected]"
                                                           value="1"
                                                           class="form-check-input allocation-checkbox"
                                                           checked>
                                                    <input type="hidden" name="allocations[{{ loop.index0 }}][applicationId]" value="{{ suggestion.applicationId }}">
                                                    <input type="hidden" name="allocations[{{ loop.index0 }}][characterId]" value="{{ suggestion.characterId }}">
                                                    <input type="hidden" name="allocations[{{ loop.index0 }}][characterTitle]" value="{{ suggestion.characterTitle }}">
                                                </td>
                                                <td>
                                                    <strong>{{ suggestion.characterTitle }}</strong>
                                                </td>
                                                <td>
                                                    {{ suggestion.applicantEmail }}
                                                </td>
                                                <td>
                                                    <span class="badge
                                                        {% if suggestion.priority == 1 %}bg-success
                                                        {% elseif suggestion.priority == 2 %}bg-info
                                                        {% elseif suggestion.priority == 3 %}bg-warning
                                                        {% else %}bg-secondary{% endif %}">
                                                        #{{ suggestion.priority }}
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge
                                                        {% if suggestion.voteScore > 0 %}bg-success
                                                        {% elseif suggestion.voteScore < 0 %}bg-danger
                                                        {% else %}bg-secondary{% endif %}">
                                                        {{ suggestion.voteScore > 0 ? '+' : '' }}{{ suggestion.voteScore }}
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong>{{ suggestion.totalScore|number_format(1) }}</strong>
                                                </td>
                                                <td>
                                                    {% if suggestion.justification %}
                                                        <button type="button"
                                                                class="btn btn-sm btn-outline-info"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#justificationModal{{ loop.index0 }}">
                                                            <i class="bi bi-eye"></i> {{ 'view'|trans }}
                                                        </button>
                                                    {% else %}
                                                        <span class="text-muted">-</span>
                                                    {% endif %}
                                                </td>
                                            </tr>

                                            {# Justification Modal #}
                                            {% if suggestion.justification %}
                                                <div class="modal fade" id="justificationModal{{ loop.index0 }}" tabindex="-1">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">{{ 'larp.applications.player_justification'|trans }}</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <p><strong>{{ 'larp.applications.character'|trans }}:</strong> {{ suggestion.characterTitle }}</p>
                                                                <p><strong>{{ 'larp.applications.applicant'|trans }}:</strong> {{ suggestion.applicantEmail }}</p>
                                                                <hr>
                                                                <p>{{ suggestion.justification|nl2br }}</p>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'close'|trans }}</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('backoffice_larp_applications_list', {larp: larp.id}) }}" class="btn btn-secondary">
                            {{ 'cancel'|trans }}
                        </a>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmAllocationModal">
                            <i class="bi bi-send"></i> {{ 'larp.applications.send_allocations'|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </form>

        {# Confirmation Modal #}
        <div class="modal fade" id="confirmAllocationModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ 'larp.applications.confirm_allocation'|trans }}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>{{ 'larp.applications.confirm_allocation_message'|trans }}</p>
                        <p class="text-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            {{ 'larp.applications.email_will_be_sent'|trans }}
                        </p>
                        <p id="selectedCount" class="text-muted"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'cancel'|trans }}</button>
                        <button type="submit" form="allocationForm" class="btn btn-primary">
                            {{ 'larp.applications.confirm_send'|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const selectAllCheckbox = document.getElementById('selectAll');
                const allocationCheckboxes = document.querySelectorAll('.allocation-checkbox');
                const selectedCountElement = document.getElementById('selectedCount');

                // Select/Deselect all
                selectAllCheckbox.addEventListener('change', function() {
                    allocationCheckboxes.forEach(checkbox => {
                        checkbox.checked = this.checked;
                    });
                    updateSelectedCount();
                });

                // Update select all when individual checkboxes change
                allocationCheckboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', function() {
                        const allChecked = Array.from(allocationCheckboxes).every(cb => cb.checked);
                        selectAllCheckbox.checked = allChecked;
                        updateSelectedCount();
                    });
                });

                function updateSelectedCount() {
                    const selectedCount = Array.from(allocationCheckboxes).filter(cb => cb.checked).length;
                    selectedCountElement.textContent = `${selectedCount} {{ 'larp.applications.allocations_selected'|trans }}`;
                }

                // Initialize count
                updateSelectedCount();
            });
        </script>
    {% else %}
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    {{ 'larp.applications.no_suggestions'|trans }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
