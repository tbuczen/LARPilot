{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.applications.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">{{ 'larp.applications.character_submissions'|trans }}</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">{{ 'larp.applications.overview'|trans }} {{ larp.title }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Application Statistics Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">{{ 'applications.total'|trans }}</h6>
                    <h3 class="text-primary">{{ dashboard.total_applications }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">{{ 'larp.applications.review_pending'|trans }}</h6>
                    <h3 class="text-warning">{{ dashboard.pending_applications }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">{{ 'larp.applications.approved'|trans }}</h6>
                    <h3 class="text-success">{{ dashboard.approved_applications }}</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h6 class="card-title">{{ 'larp.applications.total_choices'|trans }}</h6>
                    <h3 class="text-info">{{ dashboard.total_choices }}</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Character Popularity Row -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">{{ 'larp.applications.most_wanted'|trans }}</h6>
                </div>
                <div class="card-body">
                    {% if dashboard.most_wanted_characters is not empty %}
                        <div class="list-group list-group-flush">
                            {% for characterId, data in dashboard.most_wanted_characters %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="{{ path('backoffice_larp_story_character_modify', {'larp': larp.id, 'character': data.character.id}) }}" class="text-decoration-none">
                                            {{ data.character.title }}
                                        </a>
                                    </span>
                                    <span class="badge badge-primary">{{ data.count }} {{ data.count != 1 ? 'larp.applications.choices'|trans : 'larp.applications.choice'|trans }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">{{ 'larp.applications.no_character_choices'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">{{ 'larp.applications.least_wanted'|trans }}</h6>
                </div>
                <div class="card-body">
                    {% if dashboard.least_wanted_characters is not empty %}
                        <div class="list-group list-group-flush">
                            {% for characterId, data in dashboard.least_wanted_characters %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <a href="{{ path('backoffice_larp_story_character_modify', {'larp': larp.id, 'character': data.character.id}) }}" class="text-decoration-none">
                                            {{ data.character.title }}
                                        </a>
                                    </span>
                                    <span class="badge {{ data.count == 0 ? 'badge-danger' : 'badge-secondary' }}">
                                        {% if data.count == 0 %}
                                            {{ 'larp.applications.no_applications'|trans }}
                                        {% else %}
                                            {{ data.count }} {{ data.count != 1 ? 'larp.applications.choices'|trans : 'larp.applications.choice'|trans }}
                                        {% endif %}
                                    </span>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">{{ 'larp.applications.no_character_choices'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Faction Interest Row (Full Width with Visual Representation) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">{{ 'larp.applications.faction_interest'|trans }}</h6>
                </div>
                <div class="card-body">
                    {% if dashboard.faction_distribution is not empty %}
                        <div class="row">
                            {% for factionName, data in dashboard.faction_distribution %}
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <h6 class="card-title mb-0">{{ factionName }}</h6>
                                                <span class="badge badge-info">{{ data.count }} {{ data.count != 1 ? 'larp.applications.choices'|trans : 'larp.applications.choice'|trans }}</span>
                                            </div>
                                            
                                            <!-- Progress Bar -->
                                            <div class="progress mb-2" style="height: 20px;">
                                                <div class="progress-bar 
                                                    {% if data.percentage >= 25 %}bg-success
                                                    {% elseif data.percentage >= 15 %}bg-warning
                                                    {% elseif data.percentage >= 5 %}bg-info
                                                    {% else %}bg-secondary{% endif %}"
                                                    role="progressbar" 
                                                    style="width: {{ data.percentage }}%"
                                                    aria-valuenow="{{ data.percentage }}" 
                                                    aria-valuemin="0" 
                                                    aria-valuemax="100">
                                                    {{ data.percentage }}%
                                                </div>
                                            </div>
                                            
                                            <!-- Visual Interest Level -->
                                            <div class="text-center">
                                                <small class="text-muted">
                                                    {% if data.percentage >= 25 %}
                                                        <i class="bi bi-fire text-success"></i> {{ 'larp.applications.high_interest'|trans }}
                                                    {% elseif data.percentage >= 15 %}
                                                        <i class="bi bi-star-fill text-warning"></i> {{ 'larp.applications.moderate_interest'|trans }}
                                                    {% elseif data.percentage >= 5 %}
                                                        <i class="bi bi-star text-info"></i> {{ 'larp.applications.low_interest'|trans }}
                                                    {% else %}
                                                        <i class="bi bi-star text-secondary"></i> {{ 'larp.applications.very_low_interest'|trans }}
                                                    {% endif %}
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">{{ 'larp.applications.no_faction_data'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">{{ 'larp.applications.filter_applications'|trans }}</h6>
                    <a href="{{ path('backoffice_larp_applications_suggest_allocation', {larp: larp.id}) }}"
                       class="btn btn-primary">
                        <i class="bi bi-magic"></i> {{ 'larp.applications.suggest_allocation'|trans }}
                    </a>
                </div>
                <div class="card-body p-0">
                    {% include 'includes/filter_form.html.twig' with { form: filterForm, larp: larp } %}

                    {% if applications is not empty %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>{{ 'larp.applications.applicant'|trans }}</th>
                                        <th>{{ 'larp.applications.status'|trans }}</th>
                                        <th>{{ 'larp.applications.character_choices'|trans }}</th>
                                        <th>{{ 'larp.applications.applied'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for application in applications %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('backoffice_larp_applications_view', {larp: larp.id, application: application.id}) }}"
                                                   class="text-decoration-none">
                                                    {{ application.contactEmail }}
                                                </a>
                                            </td>
                                            <td>
                                                {% if application.status is defined %}
                                                    {% set statusClass = 'secondary' %}
                                                    {% if application.status.value == 'new' %}
                                                        {% set statusClass = 'primary' %}
                                                    {% elseif application.status.value == 'consider' %}
                                                        {% set statusClass = 'info' %}
                                                    {% elseif application.status.value == 'offered' %}
                                                        {% set statusClass = 'warning' %}
                                                    {% elseif application.status.value == 'confirmed' %}
                                                        {% set statusClass = 'success' %}
                                                    {% elseif application.status.value == 'accepted' %}
                                                        {% set statusClass = 'success' %}
                                                    {% elseif application.status.value == 'declined' %}
                                                        {% set statusClass = 'danger' %}
                                                    {% elseif application.status.value == 'rejected' %}
                                                        {% set statusClass = 'danger' %}
                                                    {% endif %}
                                                    <span class="badge bg-{{ statusClass }}">
                                                        {{ application.status.value|upper }}
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-secondary">UNKNOWN</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% for choice in application.choices %}
                                                    <span class="badge bg-info me-1">
                                                        {{ choice.character.title }}
                                                        <span class="badge bg-light text-dark ms-1">#{{ choice.priority }}</span>
                                                    </span>
                                                {% endfor %}
                                            </td>
                                            <td>{{ application.createdAt|date('Y-m-d H:i') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        {# Pagination #}
                        {% include 'includes/pagination.html.twig' with { pagination: pagination } %}
                    {% else %}
                        <p class="text-muted">{{ 'empty_list'|trans }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}