{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.item.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_larp_story_item_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.item.list', actions) }}

        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if items is not empty %}
            <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                <tr>
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'title',
                        label: 'name'|trans
                    } %}
                    <th>{{ 'description'|trans }}</th>
                    <th>{{ 'amount'|trans }}</th>
                    <th>{{ 'actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <td>
                            <a href="{{ path('backoffice_larp_story_item_modify', { larp: larp.id, item: item.id }) }}">
                                {{ item.title }}
                            </a>
                        </td>
                        <td>{{ item.description|truncate_words(10) }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>
                            {{ ui.delete_button(item.id, item.title, path('backoffice_larp_story_item_delete', { larp: larp.id, item: item.id })) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-box-seam') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
