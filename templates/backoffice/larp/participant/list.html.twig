{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.participant.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {{ ui.card_header('larp.participant.list') }}

        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if participants is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        {% include 'includes/sort_th.html.twig' with {
                            field: 'user.username',
                            label: 'name'|trans
                        } %}
                        <th>{{ 'roles'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for participant in participants %}
                        <tr>
                            <td>
                                <a href="{{ path('backoffice_larp_participant_modify', { larp: larp.id, participant: participant.id }) }}">
                                    {{ participant.user.username }}
                                </a>
                            </td>
                            <td>{{ participant.roles
                                    |map(r => ('user_role.' ~ r.value)|trans)
                                    |join(', ')
                                }}</td>
                            <td>
                                {{ ui.delete_button(participant.id, participant.user.username, path('backoffice_larp_participant_delete', { larp: larp.id, participant: participant.id })) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% include 'includes/pagination.html.twig' with { pagination: participants } %}
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-people') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
