{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">{{ 'backoffice.larp.participant.list'|trans }}</h2>
                <div class="d-flex gap-2">
                    <a href="{{ path('backoffice_larp_participant_modify', { larp: larp.id }) }}" class="btn btn-success">
                        {{ 'common.create'|trans }}
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                <tr>
                    <th>{{ 'common.name'|trans }}</th>
                    <th>{{ 'common.roles'|trans }}</th>
                    <th>{{ 'common.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for participant in participants %}
                    <tr>
                        <td>
                            <a href="{{ path('backoffice_larp_participant_modify', { larp: larp.id, participant: participant.id }) }}">
                                {{ participant.user.username }}
                            </a>
                        </td>
                        <td>{{ participant.roles
                                |map(r => ('user_role.' ~ r.value)|trans)
                                |join(', ')
                            }}</td>
                        <td>


                            <button type="button"
                                    class="btn btn-sm btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#globalDeleteParticipantModal"
                                    data-delete-text=" {{ 'common.delete'|trans }}"
                                    data-id="{{ participant.id }}"
                                    data-delete-url-base="{{ path('backoffice_larp_participant_delete', { larp: larp.id, participant: 'ID' }) }}"
                            >
                                {{ 'common.delete'|trans }}
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="mt-3 d-flex justify-content-center">
                {{ knp_pagination_render(participants) }}
            </div>
        </div>
    </div>

    <div class="modal fade" id="globalDeleteParticipantModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="globalDeleteParticipantModalLabel"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'common.close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    {{ 'backoffice.common.confirmation'|trans() }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{ 'common.cancel'|trans }}
                    </button>
                    <a href="#" id="deleteOnlyLarpilot" class="btn btn-danger">
                        {{ 'backoffice.larp.participant.delete_only_larpilot'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>


    <script>
        const deleteModal = document.getElementById('globalDeleteParticipantModal');
        deleteModal.addParticipantListener('show.bs.modal', function (participant) {
            const button = participant.relatedTarget;
            const id = button.getAttribute('data-id');
            const baseUrl = button.getAttribute('data-delete-url-base');
            const deleteTxt = button.getAttribute('data-delete-text');

            const modalTitle = deleteModal.querySelector('.modal-title');
            modalTitle.textContent = `${deleteTxt} ?`;

            const deleteOnlyLink = document.getElementById('deleteOnlyLarpilot');
            const deleteWithIntegrationsLink = document.getElementById('deleteWithIntegrations');

            deleteOnlyLink.href = baseUrl
                .replace('ID', id)
                .replace('INTEGRATIONS_FLAG', 'false');

            deleteWithIntegrationsLink.href = baseUrl
                .replace('ID', id)
                .replace('INTEGRATIONS_FLAG', 'true');
        });
    </script>
{% endblock %}
