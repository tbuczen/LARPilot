{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.proposal.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">{{ 'proposal.list'|trans }}</h2>
                {% if create_route is defined %}
                <div class="d-flex gap-2">
                    <a href="{{ path(create_route, { larp: larp.id, recruitment: recruitment.id }) }}"
                       class="btn btn-success">
                        {{ 'create'|trans }}
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
        <div class="card-body p-0">
            {% if proposals is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>{{ 'character'|trans }}</th>
                        <th>{{ 'status'|trans }}</th>
                        <th>{{ 'form.proposal.comment'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for proposal in proposals %}
                        <tr>
                            <td>{{ proposal.character.title }}</td>
                            <td>
                                <span class="badge bg-{{ proposal.status.value == 'accepted' ? 'success' : (proposal.status.value == 'rejected' ? 'danger' : 'secondary') }}">
                                    {{ proposal.status.value }}
                                </span>
                            </td>
                            <td>{{ proposal.comment|default('-') }}</td>
                            <td>
                                <form method="post" action="{{ path(accept_route, {larp: larp.id, id: proposal.id}) }}"
                                      style="display:inline">
                                    <button class="btn btn-sm btn-success" type="submit">
                                        {{ 'proposal.accept'|trans }}
                                    </button>
                                </form>
                                <form method="post" action="{{ path(reject_route, {larp: larp.id, id: proposal.id}) }}"
                                      style="display:inline">
                                    <button class="btn btn-sm btn-danger" type="submit">
                                        {{ 'proposal.reject'|trans }}
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <p class="text-muted p-3">{{ 'empty_list'|trans }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
