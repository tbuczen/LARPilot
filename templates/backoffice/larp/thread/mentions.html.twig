{% extends 'backoffice/larp/base.html.twig' %}

{% import 'includes/story_object_tabs.html.twig' as tabs_macro %}

{% block larp_content %}
    {% include 'includes/story_object_header.html.twig' with {
        storyObject: thread,
        storyObjectType: 'larp.thread.singular',
        mentionsCount: mentions|length
    } %}

    {{ tabs_macro.tabs('mentions', thread, 'thread', larp, mentions|length, true) }}

    {% include 'includes/story_object_mentions.html.twig' with {
        storyObject: thread,
        mentions: mentions,
        larp: larp,
        noCard: true
    } %}
{% endblock %}

{% block title %}{{ larp.title }} - {{ thread.getTitle() }} - {{ 'story_object.mentions.title'|trans }}{% endblock %}
