{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_content %}
    <div>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    {% if thread is defined %}
        <a href="{{ path('backoffice_larp_story_thread_tree', { larp: larp.id, thread: thread.id }) }}"
           class="btn btn-secondary mt-3">
            Decision Tree
        </a>
    {% endif %}
{% endblock %}

{% block larp_title %}{{ (thread is defined and thread.id ? 'larp.thread.modify' : 'larp.thread.create')|trans }} - {{ larp.title }}{% endblock %}

