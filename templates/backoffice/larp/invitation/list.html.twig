{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block title %}{{ 'larp.invitation.plural'|trans }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_larp_invitations_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.invitation.plural', actions) }}

        <div class="card-body p-0">
            {% if invitations is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>{{ 'role'|trans }}</th>
                        <th>{{ 'valid_to'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for invitation in invitations %}
                        <tr>
                            <td>{{ ('user_role.' ~ invitation.invitedRole.value)|trans }}</td>
                            <td>{{ invitation.validTo|date('Y-m-d H:i:s') }}</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <input type="text"
                                           class="form-control form-control-sm d-none"
                                           id="invitation-link-{{ invitation.id }}"
                                           value="{{ app.request.schemeAndHttpHost }}{{ path('public_larp_process_invitation', { slug: larp.slug, code: invitation.code }) }}">
                                    <button type="button"
                                            class="btn btn-sm btn-secondary"
                                            onclick="copyInvitationLink('{{ invitation.id }}')">
                                        {{ 'copy_link'|trans }}
                                    </button>
                                    <a href="{{ path('backoffice_larp_invitations_modify', { larp: larp.id, invitation: invitation.id }) }}"
                                       class="btn btn-sm btn-primary">
                                        {{ 'edit'|trans }}
                                    </a>
                                    {{ ui.delete_button(invitation.id, ('user_role.' ~ invitation.invitedRole.value)|trans, path('backoffice_larp_invitations_delete', { larp: larp.id, invitation: invitation.id })) }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                {{ ui.empty_state('larp.no_invitations', 'bi-envelope') }}
            {% endif %}

            <script>
                function copyInvitationLink(invitationId) {
                    const input = document.getElementById('invitation-link-' + invitationId);
                    navigator.clipboard.writeText(input.value)
                        .then(() => {
                            const toastEl = document.getElementById('copyToast');
                            const toast = new bootstrap.Toast(toastEl, { delay: 2000 });
                            toast.show();
                        })
                        .catch(err => {
                            console.error('Failed to copy: ', err);
                        });
                }
            </script>
        </div>
    </div>

    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="copyToast" class="toast align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    {{ 'link_copied'|trans }}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="{{ 'close'|trans }}"></button>
            </div>
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
