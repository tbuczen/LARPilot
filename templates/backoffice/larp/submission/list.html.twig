{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_content %}
    <h2>{{ 'backoffice.larp.submissions'|trans }}</h2>
    <p>{{ 'backoffice.larp.submissions.missing'|trans({'%count%': missing}) }}</p>
    <ul>
        {% for stat in factionStats %}
            <li>{{ stat.faction.title }} - {{ stat.percentage }}%</li>
        {% endfor %}
    </ul>
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'common.user'|trans }}</th>
            <th>{{ 'form.contact_email'|trans }}</th>
            <th>{{ 'form.favourite_style'|trans }}</th>
            <th>{{ 'form.triggers'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for submission in submissions %}
            <tr>
                <td>{{ submission.user.username }}</td>
                <td>{{ submission.contactEmail }}</td>
                <td>{{ submission.favouriteStyle }}</td>
                <td>{{ submission.triggers }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
