{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.recruitment.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {{ ui.card_header('recruitment.open') }}

        <div class="card-body p-0">
            {% if recruitments is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>{{ 'form.recruitment.type'|trans }}</th>
                        <th>{{ 'form.recruitment.number'|trans }}</th>
                        <th>{{ 'form.recruitment.notes'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for recruitment in recruitments %}
                        <tr>
                            <td>
                                <a href="{{ path(modify_route, {larp: larp.id, id: recruitment.id}) }}">
                                    {{ recruitment.type }}
                                </a>
                            </td>
                            <td>{{ recruitment.requiredNumber }}</td>
                            <td>{{ recruitment.notes|default('-') }}</td>
                            <td>
                                <a href="{{ path(modify_route, {larp: larp.id, id: recruitment.id}) }}"
                                   class="btn btn-sm btn-primary">
                                    {{ 'edit'|trans }}
                                </a>
                                {% if proposal_route is defined %}
                                    <a href="{{ path(proposal_route, {larp: larp.id, recruitment: recruitment.id}) }}"
                                       class="btn btn-sm btn-success">
                                        {{ 'proposal.create'|trans }}
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-megaphone') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
