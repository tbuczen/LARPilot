{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.map.view'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">{{ map.name }}</h2>
                <div class="d-flex gap-2">
                    <a href="{{ path('backoffice_larp_map_location_modify', { larp: larp.id, map: map.id }) }}"
                       class="btn btn-success">
                        {{ 'larp.map.add_location'|trans }}
                    </a>
                    <a href="{{ path('backoffice_larp_map_modify', { larp: larp.id, map: map.id }) }}"
                       class="btn btn-primary">
                        {{ 'edit'|trans }}
                    </a>
                    <a href="{{ path('backoffice_larp_map_list', { larp: larp.id }) }}"
                       class="btn btn-secondary">
                        {{ 'back'|trans }}
                    </a>
                </div>
            </div>
            {% if staffPositions is not empty %}
                <div class="mt-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch"
                               id="staffPositionsToggle"
                               data-action="change->leaflet-map#toggleStaffPositions"
                               checked>
                        <label class="form-check-label" for="staffPositionsToggle">
                            <i class="bi bi-person-fill"></i>
                            {{ 'staff_position.show_on_map'|trans }} ({{ staffPositions|length }})
                        </label>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="card-body">
            {% if map.description %}
                <div class="mb-3">
                    <strong>{{ 'description'|trans }}:</strong>
                    {{ map.description|truncate_words(10) }}
                </div>
            {% endif %}

            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>{{ 'larp.map.grid_size'|trans }}:</strong>
                    {{ map.gridRows }} Ã— {{ map.gridColumns }}
                </div>
                <div class="col-md-6">
                    <strong>{{ 'larp.map.locations_count'|trans }}:</strong>
                    {{ locations|length }}
                </div>
            </div>

            {% if map.imageFile %}
                <div class="mb-4"
                     data-controller="leaflet-map"
                     data-leaflet-map-image-url-value="{{ map.imagePath }}"
                     data-leaflet-map-grid-rows-value="{{ map.gridRows }}"
                     data-leaflet-map-grid-columns-value="{{ map.gridColumns }}"
                     data-leaflet-map-grid-opacity-value="{{ map.gridOpacity }}"
                     data-leaflet-map-grid-visible-value="{{ map.isGridVisible ? 'true' : 'false' }}"
                     data-leaflet-map-locations-value="{{ locationsData|json_encode|e('html_attr') }}"
                     data-leaflet-map-staff-positions-value="{{ staffPositionsData|json_encode|e('html_attr') }}">
                    <div id="map" style="height: 600px; width: 100%; border: 1px solid #ddd;"></div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    {{ 'larp.map.no_image'|trans }}
                </div>
            {% endif %}

            {# Staff Position Update Panel #}
            {% if canUpdatePosition and map.imageFile %}
                <div class="card mb-4 border-info">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-geo-alt-fill me-2"></i>
                            {{ 'staff_position.my_position'|trans }}
                        </span>
                        <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse"
                                data-bs-target="#positionUpdatePanel" aria-expanded="false">
                            <i class="bi bi-chevron-down"></i>
                        </button>
                    </div>
                    <div class="collapse show" id="positionUpdatePanel">
                        <div class="card-body"
                             data-controller="staff-position-update"
                             data-staff-position-update-api-url-value="{{ path('api_staff_position_update', { larp: larp.id, map: map.id }) }}"
                             data-staff-position-update-remove-url-value="{{ path('api_staff_position_remove', { larp: larp.id, map: map.id }) }}"
                             data-staff-position-update-image-url-value="{{ map.imagePath }}"
                             data-staff-position-update-grid-rows-value="{{ map.gridRows }}"
                             data-staff-position-update-grid-columns-value="{{ map.gridColumns }}"
                             data-staff-position-update-current-cell-value="{{ myPosition ? myPosition.gridCell : '' }}">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="text-muted small mb-2">
                                        <i class="bi bi-info-circle me-1"></i>
                                        {{ 'staff_position.tap_to_select'|trans }}
                                    </p>

                                    <div data-staff-position-update-target="mapContainer"
                                         style="height: 300px; width: 100%; border: 1px solid #ddd; border-radius: 4px;">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">{{ 'staff_position.selected_cell'|trans }}</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-grid-3x3"></i></span>
                                            <input type="text" class="form-control form-control-lg text-center"
                                                   data-staff-position-update-target="cellDisplay"
                                                   value="{{ myPosition ? myPosition.gridCell : '' }}" readonly>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">{{ 'staff_position.status_note'|trans }}</label>
                                        <input type="text" class="form-control"
                                               data-staff-position-update-target="statusNote"
                                               placeholder="{{ 'staff_position.status_note_placeholder'|trans }}"
                                               value="{{ myPosition ? myPosition.statusNote : '' }}">
                                    </div>

                                    <button type="button" class="btn btn-primary w-100 mb-2"
                                            data-staff-position-update-target="saveButton"
                                            data-action="click->staff-position-update#save">
                                        <i class="bi bi-check-circle me-1"></i>
                                        {{ 'staff_position.save_position'|trans }}
                                    </button>

                                    {% if myPosition %}
                                        <button type="button" class="btn btn-outline-danger w-100"
                                                data-action="click->staff-position-update#remove">
                                            <i class="bi bi-x-circle me-1"></i>
                                            {{ 'staff_position.remove_position'|trans }}
                                        </button>
                                    {% endif %}

                                    <div class="mt-3 small text-muted" data-staff-position-update-target="status">
                                        {% if myPosition %}
                                            {{ 'staff_position.updated_at'|trans }}: {{ myPosition.positionUpdatedAt|date('H:i') }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if locations is not empty %}
                <h3 class="mt-4">{{ 'larp.map.locations'|trans }}</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>{{ 'name'|trans }}</th>
                            <th>{{ 'form.map_location.type'|trans }}</th>
                            <th>{{ 'form.map_location.grid_coordinates'|trans }}</th>
                            <th>{{ 'form.map_location.capacity'|trans }}</th>
                            <th>{{ 'actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            <tr>
                                <td>
                                    <a href="{{ path('backoffice_larp_map_location_modify', {
                                        larp: larp.id, map: map.id, location: location.id
                                    }) }}">
                                        {{ location.name }}
                                    </a>
                                </td>
                                <td>
                                    {% if location.type %}
                                        {{ ('enum.location_type.' ~ location.type.value)|trans }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
{#                                <td>{{ location.gridCoordinatesString }}</td>#}
                                <td>{{ location.capacity ?? '-' }}</td>
                                <td>
                                    <a href="{{ path('backoffice_larp_map_location_modify', {
                                        larp: larp.id, map: map.id, location: location.id
                                    }) }}" class="btn btn-sm btn-primary">
                                        {{ 'edit'|trans }}
                                    </a>
                                    <button type="button" class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#deleteLocationModal"
                                            data-item-id="{{ location.id }}"
                                            data-item-name="{{ location.name }}"
                                            data-delete-url="{{ path('backoffice_larp_map_location_delete', {
                                                larp: larp.id, map: map.id, location: location.id
                                            }) }}">
                                        {{ 'delete'|trans }}
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="modal fade" id="deleteLocationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    {{ 'confirmation'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{ 'cancel'|trans }}
                    </button>
                    <form id="deleteLocationForm" method="POST">
                        <button type="submit" class="btn btn-danger">
                            {{ 'delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const deleteLocationModal = document.getElementById('deleteLocationModal');
        deleteLocationModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const itemId = button.getAttribute('data-item-id');
            const itemName = button.getAttribute('data-item-name');
            const deleteUrl = button.getAttribute('data-delete-url');

            const modalTitle = deleteLocationModal.querySelector('.modal-title');
            modalTitle.textContent = `{{ 'delete'|trans }} "${itemName}"?`;

            const deleteForm = document.getElementById('deleteLocationForm');
            deleteForm.action = deleteUrl;
        });
    </script>
{% endblock %}
