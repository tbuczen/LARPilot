{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.map.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">{{ 'larp.map.plural'|trans }}</h2>
                <div class="d-flex gap-2">
                    <a href="{{ path('backoffice_larp_map_modify', { larp: larp.id }) }}" class="btn btn-success">
                        {{ 'create'|trans }}
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if maps is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        {% include 'includes/sort_th.html.twig' with {
                            field: 'name',
                            label: 'name'|trans
                        } %}
                        <th>{{ 'larp.map.grid_size'|trans }}</th>
                        <th>{{ 'larp.map.locations_count'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for map in maps %}
                        <tr>
                            <td>
                                <a href="{{ path('backoffice_larp_map_view', { larp: larp.id, map: map.id }) }}">
                                    {{ map.name }}
                                </a>
                            </td>
                            <td>{{ map.gridRows }} Ã— {{ map.gridColumns }}</td>
                            <td>{{ map.locations|length }}</td>
                            <td>
                                <a href="{{ path('backoffice_larp_map_modify', { larp: larp.id, map: map.id }) }}"
                                   class="btn btn-sm btn-primary">
                                    {{ 'edit'|trans }}
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteMapModal"
                                        data-item-id="{{ map.id }}"
                                        data-item-name="{{ map.name }}"
                                        data-delete-url="{{ path('backoffice_larp_map_delete', { larp: larp.id, map: map.id }) }}">
                                    {{ 'delete'|trans }}
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <p class="text-muted p-3">{{ 'empty_list'|trans }}</p>
            {% endif %}
        </div>
    </div>

    <div class="modal fade" id="deleteMapModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    {{ 'confirmation'|trans }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{ 'cancel'|trans }}
                    </button>
                    <form id="deleteForm" method="POST">
                        <button type="submit" class="btn btn-danger">
                            {{ 'delete'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        const deleteModal = document.getElementById('deleteMapModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const itemId = button.getAttribute('data-item-id');
            const itemName = button.getAttribute('data-item-name');
            const deleteUrl = button.getAttribute('data-delete-url');

            const modalTitle = deleteModal.querySelector('.modal-title');
            modalTitle.textContent = `{{ 'delete'|trans }} "${itemName}"?`;

            const deleteForm = document.getElementById('deleteForm');
            deleteForm.action = deleteUrl;
        });
    </script>
{% endblock %}
