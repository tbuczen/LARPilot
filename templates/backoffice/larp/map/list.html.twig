{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.map.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <div class="card mt-4">
        {% set actions %}
            {{ ui.primary_button('create', path('backoffice_larp_map_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.map.plural', actions) }}

        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if maps is not empty %}
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        {% include 'includes/sort_th.html.twig' with {
                            field: 'name',
                            label: 'name'|trans
                        } %}
                        <th>{{ 'larp.map.grid_size'|trans }}</th>
                        <th>{{ 'larp.map.locations_count'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for map in maps %}
                        <tr>
                            <td>
                                <a href="{{ path('backoffice_larp_map_view', { larp: larp.id, map: map.id }) }}">
                                    {{ map.name }}
                                </a>
                            </td>
                            <td>{{ map.gridRows }} Ã— {{ map.gridColumns }}</td>
                            <td>{{ map.locations|length }}</td>
                            <td>
                                <a href="{{ path('backoffice_larp_map_modify', { larp: larp.id, map: map.id }) }}"
                                   class="btn btn-sm btn-primary">
                                    {{ 'edit'|trans }}
                                </a>
                                {{ ui.delete_button(map.id, map.name, path('backoffice_larp_map_delete', { larp: larp.id, map: map.id })) }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-map') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
