{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_title %}{{ 'larp.integrationSettings'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <h3>{{ 'larp.integrationSettings'|trans }}</h3>
    {% for provider in availableProviders %}
        {% set current = integrations|filter(i => i.provider.sameAs(provider))|first %}

        <div class="card mt-4">
            <div class="card-header">
                <h2>{{ provider.getLabel() }}</h2>
            </div>
            <div class="card-body">
                <p>{{ provider.descriptionKey() is not null ? provider.descriptionKey()|trans : '' }}</p>

                {% if current == false %}
                    <p>{{ 'not_connected'|trans }}</p>
                    <a href="{{ path('backoffice_larp_connect_integration', { larp: larp.id, provider: provider.value }) }}"
                       class="btn btn-primary">
                        {{ 'connect'|trans }}
                    </a>
                {% else %}
                    {% if provider.integrationSettingsTemplate() %}
                        {% include 'backoffice/larp/integrations/' ~ provider.integrationSettingsTemplate() with { integration: current, larp: larp } %}
                    {% else %}
                        <p>{{ 'connected'|trans }}</p>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endblock %}