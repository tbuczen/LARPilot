{% extends 'backoffice/larp/marketplace/_base.html.twig' %}

{% block larp_title %}{{ 'marketplace.events_list'|trans }} - {{ larp.title }}{% endblock %}

{% set active_tab = 'events' %}

{% block marketplace_content %}
    {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

    {% if events is not empty %}
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>{{ 'title'|trans }}</th>
                        <th>{{ 'description'|trans }}</th>
                        <th>{{ 'tags'|trans }}</th>
                        <th>{{ 'marketplace.involved'|trans }}</th>
                        <th>{{ 'actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for event in events %}
                        <tr>
                            <td>
                                <a href="{{ path('backoffice_larp_story_event_modify', {
                                    larp: larp.id, event: event.id
                                }) }}">
                                    {{ event.title }}
                                </a>
                            </td>
                            <td>{{ event.description|truncate_words(10) }}</td>
                            <td>
                                {% for tag in event.tags %}
                                    <span class="badge bg-info">{{ tag.title }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                {% if event.involvedCharacters|length > 0 %}
                                    {{ event.involvedCharacters|length }} {{ 'characters'|trans }}
                                {% else %}
                                    <span class="text-muted">{{ 'marketplace.no_characters'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('backoffice_larp_story_event_modify', {
                                    larp: larp.id, event: event.id
                                }) }}" class="btn btn-sm btn-primary">
                                    {{ 'edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        {% include 'includes/pagination.html.twig' with { pagination: events } %}
    {% else %}
        <p class="text-muted p-3">{{ 'empty_list'|trans }}</p>
    {% endif %}
{% endblock %}
