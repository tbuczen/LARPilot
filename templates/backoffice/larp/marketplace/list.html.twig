{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">{{ 'backoffice.marketplace.title'|trans }}</h2>
            </div>

            {# View tabs #}
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link {% if view == 'threads' %}active{% endif %}"
                       href="{{ path('backoffice_larp_story_marketplace_list', {larp: larp.id, view: 'threads'}) }}">
                        {{ 'backoffice.marketplace.threads'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if view == 'quests' %}active{% endif %}"
                       href="{{ path('backoffice_larp_story_marketplace_list', {larp: larp.id, view: 'quests'}) }}">
                        {{ 'backoffice.marketplace.quests'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if view == 'events' %}active{% endif %}"
                       href="{{ path('backoffice_larp_story_marketplace_list', {larp: larp.id, view: 'events'}) }}">
                        {{ 'backoffice.marketplace.events'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if view == 'characters' %}active{% endif %}"
                       href="{{ path('backoffice_larp_story_marketplace_list', {larp: larp.id, view: 'characters'}) }}">
                        {{ 'backoffice.marketplace.characters_needing_threads'|trans }}
                        <span class="badge bg-danger ms-1">{{ items|length }}</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="card-body p-0">
            {# Filter form - not shown for characters view #}
            {% if view != 'characters' %}
                {% include 'includes/filter_form.html.twig' with { form: filterForm } %}
            {% endif %}

            {# Content based on view type #}
            {% if items is not empty %}
                {% if view == 'characters' %}
                    {# Characters needing threads #}
                    <div class="alert alert-info m-3">
                        {{ 'backoffice.marketplace.min_threads_info'|trans({'%count%': minThreadsPerCharacter}) }}
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>{{ 'common.character'|trans }}</th>
                                    <th>{{ 'backoffice.marketplace.current_threads'|trans }}</th>
                                    <th>{{ 'common.tags'|trans }}</th>
                                    <th>{{ 'common.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for character in items %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('backoffice_larp_story_character_modify', {
                                                larp: larp.id, character: character.id
                                            }) }}">
                                                {{ character.title }}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge {% if character.threads|length < minThreadsPerCharacter %}bg-danger{% else %}bg-success{% endif %}">
                                                {{ character.threads|length }} / {{ minThreadsPerCharacter }}
                                            </span>
                                        </td>
                                        <td>
                                            {% for tag in character.tags %}
                                                <span class="badge bg-secondary">{{ tag.title }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            <a href="{{ path('backoffice_larp_story_marketplace_character_detail', {
                                                larp: larp.id, character: character.id
                                            }) }}" class="btn btn-sm btn-primary">
                                                {{ 'backoffice.marketplace.view_suggestions'|trans }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    {# Threads, Quests, or Events #}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>{{ 'common.title'|trans }}</th>
                                    <th>{{ 'common.description'|trans }}</th>
                                    <th>{{ 'common.tags'|trans }}</th>
                                    <th>{{ 'backoffice.marketplace.involved'|trans }}</th>
                                    <th>{{ 'common.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('backoffice_larp_story_' ~ type ~ '_modify', {
                                                larp: larp.id, (type[:-1]): item.id
                                            }) }}">
                                                {{ item.title }}
                                            </a>
                                        </td>
                                        <td>{{ item.description|sanitize_html|striptags|u.truncate(100, '...') }}</td>
                                        <td>
                                            {% for tag in item.tags %}
                                                <span class="badge bg-info">{{ tag.title }}</span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% if type == 'threads' %}
                                                {% if item.involvedCharacters|length > 0 %}
                                                    <strong>{{ 'common.characters'|trans }}:</strong>
                                                    {% for char in item.involvedCharacters|slice(0, 3) %}
                                                        {{ char.title }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                    {% if item.involvedCharacters|length > 3 %}
                                                        <span class="text-muted">+{{ item.involvedCharacters|length - 3 }} more</span>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted">{{ 'backoffice.marketplace.no_characters'|trans }}</span>
                                                {% endif %}
                                            {% elseif type == 'quests' %}
                                                {% if item.involvedCharacters|length > 0 %}
                                                    {{ item.involvedCharacters|length }} {{ 'common.characters'|trans }}
                                                {% else %}
                                                    <span class="text-muted">{{ 'backoffice.marketplace.no_characters'|trans }}</span>
                                                {% endif %}
                                            {% elseif type == 'events' %}
                                                {% if item.involvedCharacters|length > 0 %}
                                                    {{ item.involvedCharacters|length }} {{ 'common.characters'|trans }}
                                                {% else %}
                                                    <span class="text-muted">{{ 'backoffice.marketplace.no_characters'|trans }}</span>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('backoffice_larp_story_' ~ type ~ '_modify', {
                                                larp: larp.id, (type[:-1]): item.id
                                            }) }}" class="btn btn-sm btn-primary">
                                                {{ 'common.edit'|trans }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            {% else %}
                <p class="text-muted p-3">{{ 'common.empty_list'|trans }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
