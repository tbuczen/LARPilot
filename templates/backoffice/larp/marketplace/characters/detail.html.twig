{% extends 'backoffice/larp/base.html.twig' %}

{% block larp_content %}
    <div class="card mt-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">
                    <a href="{{ path('backoffice_larp_story_character_modify', {larp: larp.id, character: character.id }) }}">
                        {{ character.title }}
                    </a>
                </h2>
                <a href="{{ path('backoffice_larp_story_marketplace_characters_list', {larp: larp.id}) }}"
                   class="btn btn-secondary">
                    {{ 'common.back'|trans }}
                </a>
            </div>
        </div>

        <div class="card-body">
            {# Thread status alert #}
            {% if needsMoreThreads %}
                <div class="alert alert-warning">
                    <strong>{{ 'backoffice.marketplace.needs_threads'|trans }}</strong>
                    {{ 'backoffice.marketplace.needs_threads_detail'|trans({
                        '%current%': threadCount,
                        '%minimum%': minThreads
                    }) }}
                </div>
            {% else %}
                <div class="alert alert-success">
                    {{ 'backoffice.marketplace.has_enough_threads'|trans({
                        '%current%': threadCount,
                        '%minimum%': minThreads
                    }) }}
                </div>
            {% endif %}

            {# Character info #}
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5>{{ 'common.description'|trans }}</h5>
                    <p>{{ character.description|sanitize_html|default('-') }}</p>
                </div>
                <div class="col-md-6">
                    <h5>{{ 'common.tags'|trans }}</h5>
                    {% if character.tags|length > 0 %}
                        {% for tag in character.tags %}
                            <span class="badge bg-secondary">{{ tag.title }}</span>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted">{{ 'backoffice.marketplace.no_tags'|trans }}</p>
                    {% endif %}
                </div>
            </div>

            {# Current threads #}
            <h4 class="mt-4">{{ 'backoffice.marketplace.current_threads'|trans }}</h4>
            {% if currentThreads|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'common.title'|trans }}</th>
                                <th>{{ 'common.description'|trans }}</th>
                                <th>{{ 'common.tags'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for thread in currentThreads %}
                                <tr>
                                    <td>
                                        <a href="{{ path('backoffice_larp_story_thread_modify', {
                                            larp: larp.id, thread: thread.id
                                        }) }}">
                                            {{ thread.title }}
                                        </a>
                                    </td>
                                    <td>{{ thread.description|sanitize_html|striptags|u.truncate(80, '...') }}</td>
                                    <td>
                                        {% for tag in thread.tags %}
                                            <span class="badge bg-info">{{ tag.title }}</span>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-muted">{{ 'backoffice.marketplace.no_current_threads'|trans }}</p>
            {% endif %}

            {# Suggested threads #}
            <h4 class="mt-4">{{ 'backoffice.marketplace.suggested_threads'|trans }}</h4>
            {% if suggestedThreads|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'common.title'|trans }}</th>
                                <th>{{ 'common.description'|trans }}</th>
                                <th>{{ 'backoffice.marketplace.matching_tags'|trans }}</th>
                                <th>{{ 'common.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for thread in suggestedThreads %}
                                <tr>
                                    <td>
                                        <a href="{{ path('backoffice_larp_story_thread_modify', {
                                            larp: larp.id, thread: thread.id
                                        }) }}">
                                            {{ thread.title }}
                                        </a>
                                    </td>
                                    <td>{{ thread.description|sanitize_html|striptags|u.truncate(80, '...') }}</td>
                                    <td>
                                        {% for tag in thread.tags %}
                                            {% if tag in character.tags %}
                                                <span class="badge bg-success">{{ tag.title }}</span>
                                            {% else %}
                                                <span class="badge bg-info">{{ tag.title }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path('backoffice_larp_story_thread_modify', {
                                            larp: larp.id, thread: thread.id
                                        }) }}" class="btn btn-sm btn-primary">
                                            {{ 'common.view'|trans }}
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-muted">{{ 'backoffice.marketplace.no_suggestions'|trans }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
