{% extends 'backoffice/larp/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block larp_title %}{{ 'larp.event.list'|trans }} - {{ larp.title }}{% endblock %}

{% block larp_content %}
    <!-- Import Options Modal -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">{{ 'larp.import_options'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="{{ 'close'|trans }}"></button>
                </div>
                <div class="modal-body">
                    <a href="{{ path('backoffice_larp_story_event_import_file', {'larp': larp.id}) }}"
                       class="btn btn-secondary">
                        {{ 'larp.import_file'|trans }}
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light"
                            data-bs-dismiss="modal">{{ 'close'|trans }}</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        {% set actions %}
            <a href="{{ path('backoffice_larp_story_event_timeline', { larp: larp.id }) }}" class="btn btn-info">
                <i class="bi bi-clock-history"></i> {{ 'lore.timeline'|trans }}
            </a>
            {{ ui.primary_button('create', path('backoffice_larp_story_event_modify', { larp: larp.id }), 'bi-plus-circle') }}
        {% endset %}
        {{ ui.card_header('larp.event.list', actions) }}

        <div class="card-body p-0">
            {% include 'includes/filter_form.html.twig' with { form: filterForm } %}

            {% if events is not empty %}
            <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                <tr>
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'title',
                        label: 'name'|trans
                    } %}
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'startTime',
                        label: 'event.start_time'|trans({}, 'forms')
                    } %}
                    {% include 'includes/sort_th.html.twig' with {
                        field: 'endTime',
                        label: 'event.end_time'|trans({}, 'forms')
                    } %}
                    <th>{{ 'description'|trans }}</th>
                    <th>{{ 'actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>
                            <a href="{{ path('backoffice_larp_story_event_modify', { larp: larp.id, event: event.id }) }}">
                            {{ event.title }}
                            </a>
                            </td>
                        <td>{{ event.startTime ? event.startTime|date('Y-m-d H:i') : '-' }}</td>
                        <td>{{ event.endTime ? event.endTime|date('Y-m-d H:i') : '-' }}</td>
                        <td>{{ event.description|truncate_words(10) }}</td>
                        <td>
                            {{ ui.delete_button(event.id, event.title, path('backoffice_larp_story_event_delete', { larp: larp.id, event: event.id })) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
            {% else %}
                {{ ui.empty_state('empty_list', 'bi-calendar-event') }}
            {% endif %}
        </div>
    </div>

    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}
