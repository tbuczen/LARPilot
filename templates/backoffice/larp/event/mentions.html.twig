{% extends 'backoffice/larp/base.html.twig' %}

{% import 'includes/story_object_tabs.html.twig' as tabs_macro %}

{% block larp_content %}
    {% include 'includes/story_object_header.html.twig' with {
        storyObject: event,
        storyObjectType: 'larp.event.singular',
        mentionsCount: mentions|length
    } %}

    {{ tabs_macro.tabs('mentions', event, 'event', larp, mentions|length, false) }}

    {% include 'includes/story_object_mentions.html.twig' with {
        storyObject: event,
        mentions: mentions,
        larp: larp,
        noCard: true
    } %}
{% endblock %}

{% block title %}{{ larp.title }} - {{ event.getTitle() }} - {{ 'story_object.mentions.title'|trans }}{% endblock %}
