{# templates/backoffice/larp/story/comment/list.html.twig #}
{% extends 'backoffice/larp/base.html.twig' %}

{% block title %}{{ 'comment.discussions'|trans }} - {{ storyObject.title }}{% endblock %}

{% block larp_content %}
    <div class="container-fluid"
         data-controller="realtime-chat"
         data-realtime-chat-api-url-value="{{ path('backoffice_larp_story_comment_api', {larp: larp.id, storyObject: storyObject.id}) }}"
         data-realtime-chat-post-url-value="{{ path('backoffice_larp_story_comment_post', {larp: larp.id, storyObject: storyObject.id}) }}"
         data-realtime-chat-poll-interval-value="3000"
         data-realtime-chat-story-object-id-value="{{ storyObject.id }}">
        {# Header #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-chat-dots text-primary"></i>
                    {{ 'comment.discussions'|trans }}
                    <span class="badge bg-success"><i class="bi bi-broadcast"></i> {{ 'comment.live'|trans }}</span>
                </h1>
                <p class="text-muted mb-0">
                    {{ storyObject.targetType.value|trans }} -
                    <a href="{{ path('backoffice_larp_story_' ~ storyObject.targetType.value|lower ~ '_modify', {
                        larp: larp.id,
                        (storyObject.targetType.value|lower): storyObject.id
                    }) }}">{{ storyObject.title }}</a>
                </p>
            </div>
            <div>
                <a href="{{ path('backoffice_larp_story_comment_create', {
                    larp: larp.id,
                    storyObject: storyObject.id
                }) }}" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-plus-circle"></i> {{ 'comment.add_detailed'|trans }}
                </a>
            </div>
        </div>

        {# Stats #}
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-chat-dots fs-1 text-primary"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0 text-muted">{{ 'comment.total_comments'|trans }}</h6>
                                <h3 class="mb-0" data-realtime-chat-target="countBadge">{{ commentCount }}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="bi bi-exclamation-circle fs-1 text-warning"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-0 text-muted">{{ 'comment.unresolved_comments'|trans }}</h6>
                                <h3 class="mb-0" data-realtime-chat-target="unresolvedBadge">{{ unresolvedCount }}</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Comments List #}
        <div class="card">
            <div class="card-body" style="max-height: 600px; overflow-y: auto;" data-realtime-chat-target="commentsList">
                {% if commentThreads is empty %}
                    <div class="text-center py-5">
                        <i class="bi bi-chat-text fs-1 text-muted"></i>
                        <p class="text-muted mt-3">{{ 'comment.no_comments_yet'|trans }}</p>
                        <p class="text-muted">{{ 'comment.type_below_to_start'|trans }}</p>
                    </div>
                {% else %}
                    {% for thread in commentThreads %}
                        {# Top-level comment #}
                        {% set comment = thread.comment %}
                        <div class="comment-thread mb-4 pb-4 {% if not loop.last %}border-bottom{% endif %}" data-comment-id="{{ comment.id }}">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="avatar-circle bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 40px; height: 40px;">
                                        {{ comment.author.name|slice(0, 1)|upper }}
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="card {% if comment.isResolved %}bg-light{% endif %}">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <strong>{{ comment.author.name }}</strong>
                                                    <small class="text-muted ms-2">
                                                        {{ comment.createdAt|date('Y-m-d H:i') }}
                                                        {% if comment.updatedAt > comment.createdAt %}
                                                            ({{ 'comment.edited'|trans }})
                                                        {% endif %}
                                                    </small>
                                                    {% if comment.isResolved %}
                                                        <span class="badge bg-success ms-2">{{ 'comment.resolved'|trans }}</span>
                                                    {% endif %}
                                                </div>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-link text-muted" type="button"
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-three-dots-vertical"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path('backoffice_larp_story_comment_reply', {
                                                                larp: larp.id,
                                                                storyObject: storyObject.id,
                                                                comment: comment.id
                                                            }) }}">
                                                                <i class="bi bi-reply"></i> {{ 'comment.reply'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path('backoffice_larp_story_comment_edit', {
                                                                larp: larp.id,
                                                                storyObject: storyObject.id,
                                                                comment: comment.id
                                                            }) }}">
                                                                <i class="bi bi-pencil"></i> {{ 'common.edit'|trans }}
                                                            </a>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" action="{{ path('backoffice_larp_story_comment_resolve', {
                                                                larp: larp.id,
                                                                storyObject: storyObject.id,
                                                                comment: comment.id
                                                            }) }}" class="d-inline">
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-check-circle"></i>
                                                                    {% if comment.isResolved %}
                                                                        {{ 'comment.mark_unresolved'|trans }}
                                                                    {% else %}
                                                                        {{ 'comment.mark_resolved'|trans }}
                                                                    {% endif %}
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" action="{{ path('backoffice_larp_story_comment_delete', {
                                                                larp: larp.id,
                                                                storyObject: storyObject.id,
                                                                comment: comment.id
                                                            }) }}" class="d-inline"
                                                                  onsubmit="return confirm('{{ 'comment.confirm_delete'|trans }}')">
                                                                <button type="submit" class="dropdown-item text-danger">
                                                                    <i class="bi bi-trash"></i> {{ 'common.delete'|trans }}
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="comment-content">
                                                {{ comment.content|nl2br }}
                                            </div>
                                        </div>
                                    </div>

                                    {# Replies #}
                                    {% if thread.replies is not empty %}
                                        <div class="ms-4 mt-3 replies-container">
                                            {% for reply in thread.replies %}
                                                <div class="d-flex mb-3" data-comment-id="{{ reply.id }}">
                                                    <div class="flex-shrink-0">
                                                        <div class="avatar-circle bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                             style="width: 32px; height: 32px; font-size: 0.875rem;">
                                                            {{ reply.author.name|slice(0, 1)|upper }}
                                                        </div>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <div class="card border">
                                                            <div class="card-body py-2 px-3">
                                                                <div class="d-flex justify-content-between align-items-start mb-1">
                                                                    <div>
                                                                        <strong class="small">{{ reply.author.name }}</strong>
                                                                        <small class="text-muted ms-2">
                                                                            {{ reply.createdAt|date('Y-m-d H:i') }}
                                                                        </small>
                                                                    </div>
                                                                    <div class="dropdown">
                                                                        <button class="btn btn-sm btn-link text-muted p-0" type="button"
                                                                                data-bs-toggle="dropdown" aria-expanded="false">
                                                                            <i class="bi bi-three-dots-vertical"></i>
                                                                        </button>
                                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                                            <li>
                                                                                <a class="dropdown-item" href="{{ path('backoffice_larp_story_comment_edit', {
                                                                                    larp: larp.id,
                                                                                    storyObject: storyObject.id,
                                                                                    comment: reply.id
                                                                                }) }}">
                                                                                    <i class="bi bi-pencil"></i> {{ 'common.edit'|trans }}
                                                                                </a>
                                                                            </li>
                                                                            <li><hr class="dropdown-divider"></li>
                                                                            <li>
                                                                                <form method="post" action="{{ path('backoffice_larp_story_comment_delete', {
                                                                                    larp: larp.id,
                                                                                    storyObject: storyObject.id,
                                                                                    comment: reply.id
                                                                                }) }}" class="d-inline"
                                                                                      onsubmit="return confirm('{{ 'comment.confirm_delete'|trans }}')">
                                                                                    <button type="submit" class="dropdown-item text-danger">
                                                                                        <i class="bi bi-trash"></i> {{ 'common.delete'|trans }}
                                                                                    </button>
                                                                                </form>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <div class="comment-content small">
                                                                    {{ reply.content|nl2br }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            {# Quick Chat Form #}
            <div class="card-footer bg-light">
                <form data-realtime-chat-target="chatForm" data-action="submit->realtime-chat#sendMessage">
                    <div class="input-group">
                        <textarea
                            class="form-control"
                            rows="2"
                            placeholder="{{ 'comment.type_message'|trans }}"
                            data-realtime-chat-target="messageInput"
                            data-action="keydown->realtime-chat#handleKeyDown input->realtime-chat#handleTyping"
                            style="resize: none;"></textarea>
                        <button
                            class="btn btn-primary"
                            type="submit"
                            data-realtime-chat-target="sendButton">
                            <i class="bi bi-send"></i> {{ 'comment.send'|trans }}
                        </button>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> {{ 'comment.press_enter_to_send'|trans }}
                    </small>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animation for new comments */
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .new-comment-animation {
            animation: slideIn 0.5s ease-out;
            background-color: #fff3cd !important;
            transition: background-color 2s ease-out;
        }

        /* Live indicator pulse */
        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }

        .badge .bi-broadcast {
            animation: pulse 2s infinite;
        }

        /* Smooth scroll for comments list */
        [data-realtime-chat-target="commentsList"] {
            scroll-behavior: smooth;
        }
    </style>
{% endblock %}
