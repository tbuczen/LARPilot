{# templates/backoffice/larp/story/comment/form.html.twig #}
{% extends 'backoffice/larp/base.html.twig' %}

{% block title %}{{ 'comment.edit'|trans }}{% endblock %}

{% block larp_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                {# Header #}
                <div class="mb-4">
                    <h1 class="h3 mb-1">{{ 'comment.edit'|trans }}</h1>
                    <p class="text-muted mb-0">
                        {{ storyObject.targetType.value|trans }} -
                        <a href="{{ path('backoffice_larp_story_' ~ storyObject.targetType.value|lower ~ '_modify', {
                            larp: larp.id,
                            (storyObject.targetType.value|lower): storyObject.id
                        }) }}">{{ storyObject.title }}</a>
                    </p>
                </div>

                {# Form #}
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.content, {
                                    'attr': {
                                        'rows': 6,
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>

                            <div class="mb-3">
                                {{ form_row(form.isResolved) }}
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i>
                                    {{ 'save'|trans }}
                                </button>
                                <a href="{{ path('backoffice_larp_story_comment_discussions', {
                                larp: larp.id,
                                storyObject: storyObject.id
                                }) }}" class="btn btn-outline-secondary">
                                    {{ 'cancel'|trans }}
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
