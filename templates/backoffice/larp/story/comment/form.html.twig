{# templates/backoffice/larp/story/comment/form.html.twig #}
{% extends 'backoffice/larp/base.html.twig' %}

{% block title %}
    {% if isEdit %}
        {{ 'comment.edit'|trans }}
    {% elseif isReply is defined and isReply %}
        {{ 'comment.reply'|trans }}
    {% else %}
        {{ 'comment.create'|trans }}
    {% endif %}
{% endblock %}

{% block larp_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                {# Header #}
                <div class="mb-4">
                    <h1 class="h3 mb-1">
                        {% if isEdit %}
                            {{ 'comment.edit'|trans }}
                        {% elseif isReply is defined and isReply %}
                            {{ 'comment.reply'|trans }}
                        {% else %}
                            {{ 'comment.create'|trans }}
                        {% endif %}
                    </h1>
                    <p class="text-muted mb-0">
                        {{ storyObject.targetType.value|trans }} -
                        <a href="{{ path('backoffice_larp_story_' ~ storyObject.targetType.value|lower ~ '_modify', {
                            larp: larp.id,
                            (storyObject.targetType.value|lower): storyObject.id
                        }) }}">{{ storyObject.title }}</a>
                    </p>
                </div>

                {# Show parent comment if this is a reply #}
                {% if parentComment is defined %}
                    <div class="card mb-3 bg-light">
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">{{ 'comment.replying_to'|trans }}</h6>
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="avatar-circle bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 32px; height: 32px;">
                                        {{ parentComment.author.name|slice(0, 1)|upper }}
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <strong>{{ parentComment.author.name }}</strong>
                                    <small class="text-muted ms-2">{{ parentComment.createdAt|date('Y-m-d H:i') }}</small>
                                    <p class="mb-0 mt-1">{{ parentComment.content|truncate(200)|nl2br }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

                {# Form #}
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_row(form.content, {
                                    'attr': {
                                        'rows': 6,
                                        'class': 'form-control'
                                    }
                                }) }}
                            </div>

                            {% if isEdit %}
                                <div class="mb-3">
                                    {{ form_row(form.isResolved) }}
                                </div>
                            {% endif %}

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i>
                                    {% if isEdit %}
                                        {{ 'common.save'|trans }}
                                    {% else %}
                                        {{ 'comment.post'|trans }}
                                    {% endif %}
                                </button>
                                <a href="{{ path('backoffice_larp_story_comment_list', {
                                    larp: larp.id,
                                    storyObject: storyObject.id
                                }) }}" class="btn btn-outline-secondary">
                                    {{ 'common.cancel'|trans }}
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
