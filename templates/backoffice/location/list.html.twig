{% extends 'backoffice/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block title %}{{ 'backoffice.location.list'|trans }}{% endblock %}

{% block body %}
    <div class="container-xl mt-4">
        <div class="card mt-4">
            {% set actions %}
                {% if is_granted('ROLE_SUPER_ADMIN') %}
{#                    <a href="{{ path('backoffice_location_pending_list') }}" class="btn btn-warning me-2">#}
{#                        <i class="bi bi-hourglass-split"></i> {{ 'location.pending_locations'|trans }}#}
{#                    </a>#}
                {% endif %}
                {{ ui.primary_button('create', path('backoffice_location_modify_global'), 'bi-plus-circle') }}
            {% endset %}
            {{ ui.card_header('backoffice.location.list', actions) }}

            <div class="card-body p-0">
                {% if locations is empty %}
                    {{ ui.empty_state('backoffice.location.no_locations', 'bi-geo-alt') }}
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Capacity</th>
                                        <th>Status</th>
                                        <th>Approval</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for location in locations %}
                                        <tr>
                                            <td>{{ location.title }}</td>
                                            <td>{{ location.address }}</td>
                                            <td>{{ location.city ?? 'N/A' }}</td>
                                            <td>{{ location.capacity ?? 'N/A' }}</td>
                                            <td>
                                                {% if location.isActive %}
                                                    <span class="badge bg-success">Active</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactive</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% include 'includes/location_approval_badge.html.twig' with { location: location } %}
                                                {% if location.isRejected and location.rejectionReason %}
                                                    <i class="bi bi-info-circle text-danger"
                                                       data-bs-toggle="tooltip"
                                                       title="{{ location.rejectionReason }}"></i>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if is_granted('EDIT_LOCATION', location) %}
                                                    {{ ui.edit_button(path('backoffice_location_modify_global', {'location': location.id})) }}
                                                {% endif %}
                                                {% if is_granted('DELETE_LOCATION', location) %}
                                                    {{ ui.delete_button(location.id, location.title, path('backoffice_location_delete', {'id': location.id})) }}
                                                {% endif %}
                                                {% if is_granted('ROLE_SUPER_ADMIN') and location.isApproved == false %}
                                                    <div class="btn-group" role="group">
                                                        <form action="{{ path('backoffice_location_approve', { id: location.id }) }}"
                                                              method="post"
                                                              class="d-inline"
                                                              onsubmit="return confirm('{{ 'location.approve_confirm'|trans }}');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ location.id) }}">
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                {{ 'location.approve'|trans }}
                                                            </button>
                                                        </form>
                                                        <a href="{{ path('backoffice_location_reject', { id: location.id }) }}"
                                                           class="btn btn-sm btn-danger">
                                                            {{ 'location.reject'|trans }}
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Unified delete modal #}
    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}