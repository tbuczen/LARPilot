{% extends 'backoffice/base.html.twig' %}
{% import 'macros/ui_components.html.twig' as ui %}

{% block title %}{{ 'backoffice.location.list'|trans }}{% endblock %}

{% block body %}
    <div class="container-xl mt-4">
        <div class="card mt-4">
            {% set actions %}
                {{ ui.primary_button('create', path('backoffice_location_modify_global'), 'bi-plus-circle') }}
            {% endset %}
            {{ ui.card_header('backoffice.location.list', actions) }}

            <div class="card-body p-0">
                {% if locations is empty %}
                    {{ ui.empty_state('backoffice.location.no_locations', 'bi-geo-alt') }}
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Capacity</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for location in locations %}
                                        <tr>
                                            <td>{{ location.title }}</td>
                                            <td>{{ location.address }}</td>
                                            <td>{{ location.city ?? 'N/A' }}</td>
                                            <td>{{ location.capacity ?? 'N/A' }}</td>
                                            <td>
                                                {% if location.isActive %}
                                                    <span class="badge bg-success">Active</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactive</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {{ ui.edit_button(path('backoffice_location_modify_global', {'location': location.id})) }}
                                                {% if is_granted('ROLE_SUPER_ADMIN') or location.createdBy == app.user %}
                                                    {{ ui.delete_button(location.id, location.title, path('backoffice_location_delete', {'id': location.id})) }}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                {% endif %}
            </div>
        </div>
    </div>

    {# Unified delete modal #}
    {% include 'includes/delete_modal.html.twig' %}
{% endblock %}