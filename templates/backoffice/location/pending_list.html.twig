{% extends 'base.html.twig' %}

{% block title %}{{ 'location.pending_locations'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">{{ 'location.pending_locations'|trans }}</h2>
                    <a href="{{ path('backoffice_location_list') }}" class="btn btn-secondary">
                        {{ 'common.back'|trans }}
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                {% if locations is not empty %}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>{{ 'common.title'|trans }}</th>
                                    <th>{{ 'location.address'|trans }}</th>
                                    <th>{{ 'common.creator'|trans }}</th>
                                    <th>{{ 'common.created_at'|trans }}</th>
                                    <th>{{ 'common.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for location in locations %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('backoffice_location_modify_global', { location: location.id }) }}">
                                                {{ location.title }}
                                            </a>
                                        </td>
                                        <td>{{ location.fullAddress }}</td>
                                        <td>
                                            {% if location.createdBy %}
                                                {{ location.createdBy.name }}
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>{{ location.createdAt|date('Y-m-d H:i') }}</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <form action="{{ path('backoffice_location_approve', { id: location.id }) }}"
                                                      method="post"
                                                      class="d-inline"
                                                      onsubmit="return confirm('{{ 'location.approve_confirm'|trans }}');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ location.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        {{ 'location.approve'|trans }}
                                                    </button>
                                                </form>
                                                <a href="{{ path('backoffice_location_reject', { id: location.id }) }}"
                                                   class="btn btn-sm btn-danger">
                                                    {{ 'location.reject'|trans }}
                                                </a>
                                                <a href="{{ path('backoffice_location_modify_global', { location: location.id }) }}"
                                                   class="btn btn-sm btn-primary">
                                                    {{ 'common.view'|trans }}
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <div class="p-4 text-center">
                        <p class="text-muted mb-0">{{ 'location.no_pending_locations'|trans }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
