{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
            <div class="card-body text-center">
                <h1 class="card-title mb-3">{{ 'login_page.title'|trans }}</h1>
                <p class="card-text small mb-4 text-muted">
                    {{ 'login_page.info'|trans }}
                </p>

                <div class="d-grid gap-3">
                    <a href="{{ path('connect_google_start') }}" class="btn btn-outline-danger">
                        <i class="bi bi-google"></i> Google
                    </a>
                    <a href="{{ path('connect_facebook_start') }}" class="btn btn-outline-primary">
                        <i class="bi bi-facebook"></i> Facebook
                    </a>
                    <a href="{{ path('connect_discord_start') }}" class="btn btn-outline-info">
                        <i class="bi bi-discord"></i> Discord
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

