# define your env variables for the test env here
KERNEL_CLASS='App\Kernel'
APP_SECRET='$ecretf0rt3st'
SYMFONY_DEPRECATIONS_HELPER=999999
PANTHER_APP_ENV=panther
PANTHER_ERROR_SCREENSHOT_DIR=./var/error-screenshots

# Database configuration for tests
# Note: Doctrine adds '_test' suffix automatically in test env (see doctrine.yaml when@test)
# So DATABASE_NAME=larpilot becomes larpilot_test in the database
# For GitHub Actions, these values work with the postgres service
# For local testing, adjust DATABASE_HOST as needed
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_NAME=larpilot
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SERVER_VERSION=15

# AI Provider Configuration
# Options: openai, claude, ollama
AI_PROVIDER=ollama

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# Anthropic Claude Configuration (if AI_PROVIDER=claude)
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096

# Ollama Configuration (if AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mixtral:8x7b

# Embedding Configuration
# Options: openai, local (local not yet implemented)
EMBEDDING_PROVIDER=openai

# Vector Store Configuration
# Options: pgvector, chroma, pinecone
VECTOR_STORE=pgvector

# ChromaDB Configuration (if VECTOR_STORE=chroma)
CHROMA_BASE_URL=http://localhost:8000
CHROMA_COLLECTION_PREFIX=larpilot_test_

# Pinecone Configuration (if VECTOR_STORE=pinecone)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=larpilot_test
